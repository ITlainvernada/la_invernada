<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_pos_session_form" model="ir.ui.view">
		<field name="model">pos.session</field>
		<field name="name">pos.config.sii.form</field>
		<field name="inherit_id" ref="point_of_sale.view_pos_session_form" />
		<field name="arch" type="xml">
			<xpath expr="//field[@name='cash_control']/.." position="after">
				<separator string="Documentos autorizados a emitir" />
				<button name="action_set_next_document_number" states="opening_control,opened"
					string="Actualizar secuencias" type="object"
					groups="point_of_sale.group_pos_manager" class="oe_inline oe_link fa fa-refresh" />
				<field name="document_available_ids">
					<tree>
						<field name="document_class_id" />
						<field name="next_document_number" />
						<field name="last_document_number" />
						<field name="sequence_id" />
						<field name="caf_files" invisible="1" />
					</tree>
					<form>
						<group colspan="2">
							<field name="document_class_id" />
							<field name="next_document_number" />
							<field name="last_document_number" />
							<field name="sequence_id" />
							<field name="caf_files" invisible="1" />
						</group>

					</form>
				</field>
			</xpath>
		</field>
	</record>
</odoo>
