<?xml version="1.0" encoding="UTF-8"?>
<odoo>

	<record model="ir.ui.view" id="account_invoice_sales_form_view">
		<field name="name">account.invoice.form</field>
		<field name="model">account.invoice</field>
		<field name="inherit_id" ref="account_cancel.invoice_form_cancel_inherit" />
		<field name="priority" eval="20" />
		<field name="arch" type="xml">
			<xpath expr="//button[@name='action_invoice_cancel']"
				position="attributes">
				<attribute name="groups">generic_account_cancel.group_cancel_invoice</attribute>
				<attribute name="confirm">Está seguro de cancelar este registro?</attribute>
			</xpath>
		</field>
	</record>

	<record model="ir.ui.view" id="account_invoice_purchase_form_view">
		<field name="name">account.invoice.form</field>
		<field name="model">account.invoice</field>
		<field name="priority" eval="20" />
		<field name="inherit_id" ref="account_cancel.invoice_supplier_cancel_form_inherit" />
		<field name="arch" type="xml">
			<xpath expr="//button[@name='action_invoice_cancel']"
				position="attributes">
				<attribute name="groups">generic_account_cancel.group_cancel_invoice</attribute>
				<attribute name="confirm">Está seguro de cancelar este registro?</attribute>
			</xpath>
		</field>
	</record>
</odoo>
