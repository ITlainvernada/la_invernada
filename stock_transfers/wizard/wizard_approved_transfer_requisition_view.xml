<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record model="ir.ui.view"
		id="wizard_approved_transfer_requisition_line_tree_view">
		<field name="name">wizard.approved.transfer.requisition.line.tree</field>
		<field name="model">wizard.approved.transfer.requisition.line</field>
		<field name="arch" type="xml">
			<tree string="Detalle de Solicitud de transferencia"
				colors="blue:process_type=='diff'">
				<field name="product_id" readonly="1" />
				<field name="product_qty" readonly="1" />
				<field name="qty_process" />
				<field name="qty_diff" readonly="1" />
				<field name="line_id" invisible="1" />
				<field name="process_type" invisible="1" />
			</tree>
		</field>
	</record>

	<record model="ir.ui.view"
		id="wizard_approved_transfer_requisition_line_form_view">
		<field name="name">wizard.approved.transfer.requisition.line.form</field>
		<field name="model">wizard.approved.transfer.requisition.line</field>
		<field name="arch" type="xml">
			<form string="Detalle de Solicitud de transferencia">
				<group col="6" colspan="2">
					<field name="product_id" colspan="6" readonly="1" />
					<field name="product_qty" readonly="1" />
					<field name="qty_process" />
					<field name="qty_diff" readonly="1" />
					<field name="line_id" invisible="1" />
					<field name="process_type" invisible="1" />
				</group>
			</form>
		</field>
	</record>

	<record model="ir.ui.view"
		id="wizard_approved_transfer_requisition_form_view">
		<field name="name">wizard.approved.transfer.requisition.form</field>
		<field name="model">wizard.approved.transfer.requisition</field>
		<field name="arch" type="xml">
			<form string="Aprobar Solicitud de transferencia">
				<group col="4" colspan="2">
					<h3 colspan="4">Hay diferencias entre lo solicitado y lo aprobado</h3>
					<h3 colspan="4">Por favor indique como proceder</h3>
					<field name="process_mode" colspan="4" required="1" />
					<separator string="Lineas con diferencias" colspan="4" />
					<field name="line_diff_ids" colspan="4" nolabel="1"
						readonly="1" />
					<separator string="Lineas correctas" colspan="4" />
					<field name="line_normal_ids" readonly="1" colspan="4"
						nolabel="1" />
				</group>
				<footer>
					<div class="oe_left">
						<button name="action_process" string="Aprobar"
							type="object" class="oe_highlight" />
						<button string="Cerrar" special="cancel" type="object"
							class="oe_link" />
					</div>
				</footer>
			</form>
		</field>
	</record>

	<record model="ir.actions.act_window"
		id="action_wizard_approved_transfer_requisition_form_view">
		<field name="name">Aprobar Solicitud de transferencia</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">wizard.approved.transfer.requisition</field>
		<field name="view_type">form</field>
		<field name="view_mode">form</field>
		<field name="view_id"
			ref="wizard_approved_transfer_requisition_form_view" />
		<field name="target">new</field>
	</record>
</odoo>