<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="report_transfer_requisition">
		<t t-set="report_title" t-value="'Solicitud de Transferencia'"></t>
		<t t-call="report.html_container">
			<t t-foreach="docs" t-as="o">
				<t t-call="ecua_utilidades.internal_layout">
					<div class="page" style="font-size: 10px;">
						<div class="row">
							<table id="header_row"
								class="table table-condensed table-bordered">
								<tbody>
									<tr>
										<td id="number_title" class="text-right">
											<strong>Secuencial:</strong>
										</td>
										<td id="number_value" class="text-left">
											<span t-field="o.display_name"></span>
										</td>
										<td id="backorder_id_title" class="text-right">
											<strong>Solicitud Anterior:</strong>
										</td>
										<td id="backorder_id_value" class="text-left">
											<span t-field="o.backorder_id"></span>
										</td>
									</tr>
									<tr>
										<td id="warehouse_id_title" class="text-right">
											<strong>Almacen:</strong>
										</td>
										<td id="warehouse_id_value" class="text-left">
											<span t-field="o.warehouse_id"></span>
										</td>
										<td id="process_date_title" class="text-right">
											<strong>Fecha de Proceso:</strong>
										</td>
										<td id="process_date_value" class="text-left">
											<span
												t-esc="o.process_date and formatLang(o.process_date, date_time=True) or ''"></span>
										</td>
									</tr>
									<tr>
										<td id="location_id_title" class="text-right">
											<strong>Bodega Origen:</strong>
										</td>
										<td id="location_id_value" class="text-left">
											<span t-field="o.location_id"></span>
										</td>
										<td id="location_dest_id_title" class="text-right">
											<strong>Bodega Destino:</strong>
										</td>
										<td id="location_dest_id_value" class="text-left">
											<span t-field="o.location_dest_id"></span>
										</td>
									</tr>
									<tr>
										<td id="requisition_uid_title" class="text-right">
											<strong>Solicitado por:</strong>
										</td>
										<td id="requisition_uid_value" class="text-left">
											<span t-field="o.requisition_uid"></span>
										</td>
										<td id="requisition_date_title" class="text-right">
											<strong>Fecha de Solicitud:</strong>
										</td>
										<td id="requisition_date_value" class="text-left">
											<span
												t-esc="o.requisition_date and formatLang(o.requisition_date, date_time=True) or ''"></span>
										</td>
									</tr>
									<tr>
										<td id="approved_uid_title" class="text-right">
											<strong>Aprobado por:</strong>
										</td>
										<td id="approved_uid_value" class="text-left">
											<span t-field="o.approved_uid"></span>
										</td>
										<td id="approved_date_title" class="text-right">
											<strong>Fecha de Aprobación:</strong>
										</td>
										<td id="approved_date_value" class="text-left">
											<span
												t-esc="o.approved_date and formatLang(o.approved_date, date_time=True) or ''"></span>
										</td>
									</tr>
									<tr>
										<td id="received_uid_title" class="text-right">
											<strong>Recibido por:</strong>
										</td>
										<td id="received_uid_value" class="text-left">
											<span t-field="o.received_uid"></span>
										</td>
										<td id="received_date_title" class="text-right">
											<strong>Fecha de Recepcion:</strong>
										</td>
										<td id="received_date_value" class="text-left">
											<span
												t-esc="o.received_date and formatLang(o.received_date, date_time=True) or ''"></span>
										</td>
									</tr>
								</tbody>
							</table>
						</div>
						<h3></h3>
						<table id="report_lines"
							class="table table-condensed table-bordered">
							<thead>
								<tr>
									<th id="product_code_title" class="text-center"
										style="width: 15%;">Código
									</th>
									<th id="product_id_title" class="text-center"
										style="width: 40%;">Producto
									</th>
									<th id="product_qty_title" class="text-center">Solicitado</th>
									<th id="qty_process_title" class="text-center">Aprobado</th>
									<th id="qty_received_title" class="text-center">Recibido</th>
									<th id="uom_id_title" class="text-center"
										groups="uom.group_uom">UdM</th>
								</tr>
							</thead>
							<tbody>
								<tr t-foreach="get_lines(o)" t-as="line">
									<td id="product_code_value" class="text-left">
										<span t-esc="line.product_id.default_code" />
									</td>
									<td id="product_id_value" class="text-left">
										<span t-esc="line.product_id.name" />
									</td>
									<td id="product_qty_value" class="text-right">
										<span
											t-esc="formatLang(line.product_qty, dp='Product Unit of Measure')" />
									</td>
									<td id="qty_process_value" class="text-right">
										<t t-if="o.state in ('approved', 'process', 'done')">
											<span
												t-esc="formatLang(line.qty_process, dp='Product Unit of Measure')" />
										</t>
									</td>
									<td id="qty_received_value" class="text-right">
										<t t-if="o.state in ('process', 'done')">
											<span
												t-esc="formatLang(line.qty_received, dp='Product Unit of Measure')" />
										</t>
									</td>
									<td id="uom_id_value" class="text-left"
										groups="uom.group_uom">
										<span t-field="line.uom_id" />
									</td>
								</tr>
							</tbody>
						</table>
						<table id="user_signature" class="table">
							<tbody>
								<tr>
									<td id="create_by_value" class="text-center">_____________________</td>
									<td id="review_by_value" class="text-center">_____________________</td>
								</tr>
								<tr>
									<td id="create_by_text" class="text-center">
										<strong>Jefe</strong>
									</td>
									<td id="review_by_text" class="text-center">
										<strong>Responsable</strong>
									</td>
								</tr>
							</tbody>
						</table>
					</div>
				</t>
			</t>
		</t>
	</template>
</odoo>s