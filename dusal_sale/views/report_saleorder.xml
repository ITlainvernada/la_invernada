<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
<template id="report_saleorder_document_dusal" inherit_id="sale.report_saleorder_document">	
	<xpath expr="//t/div[hasclass('page')]/table[hasclass('table', 'table-sm')]" position="before">
        <t t-set="number" t-value="0"/>
    </xpath>
    <xpath expr="//t/div[hasclass('page')]/table[hasclass('table', 'table-sm')]/thead/tr/th[1]" position="before">
        <th t-if="doc.print_line_number"><strong>No.</strong></th>
        <th t-if="doc.print_product_image"><strong>Image</strong></th>
    </xpath>
    <xpath expr="//tbody[hasclass('sale_tbody')]//td[@t-if='display_discount']/../td[1]" position="before">
        <td t-if="doc.print_line_number">
            <t t-set="number" t-value="number+1"/>
            <span t-esc="number"/>
        </td>
        <td t-if="doc.print_product_image">
            <span t-if="doc.image_size == 'small'"><img t-if="line.product_image_small" t-att-src="'data:image/png;base64,%s' % to_text(line.product_image_small)" width="32" height="32"/></span>
            <span t-if="doc.image_size == 'medium'"><img t-if="line.product_image_medium" t-att-src="'data:image/png;base64,%s' % to_text(line.product_image_medium)" width="64" height="64"/></span>
            <span t-if="doc.image_size == 'big'"><img t-if="line.product_image" t-att-src="'data:image/png;base64,%s' % to_text(line.product_image)" width="128" height="128"/></span>
            
        </td>
    </xpath>
</template>
</data>
</odoo>
