<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record model="ir.ui.view" id="report_purchase_stock_graph_view">
		<field name="name">report.purchase.stock.graph</field>
		<field name="model">report.purchase.stock</field>
		<field name="arch" type="xml">
			<graph string="Prevision de Stock vs Compras">
				<field name="warehouse_id" />
				<field name="purchase_qty" type="measure" />
				<field name="qty_available" type="measure" />
			</graph>
		</field>
	</record>

	<record model="ir.ui.view" id="report_purchase_stock_pivot_view">
		<field name="name">report.purchase.stock.pivot</field>
		<field name="model">report.purchase.stock</field>
		<field name="arch" type="xml">
			<pivot string="Prevision de Stock vs Compras" disable_linking="True">
				<field name="warehouse_id" type="row" />
				<field name="purchase_qty" type="measure" />
				<field name="qty_available" type="measure" />
				<field name="qty_in" type="measure" />
				<field name="qty_out" type="measure" />
			</pivot>
		</field>
	</record>

	<record model="ir.ui.view" id="report_purchase_stock_search_view">
		<field name="name">report.purchase.stock.search</field>
		<field name="model">report.purchase.stock</field>
		<field name="arch" type="xml">
			<search string="Prevision de Stock vs Compras">
				<field name="warehouse_id" />
				<field name="product_id" />
				<field name="product_template_id" />
				<field name="product_categ_id" />
				<group name="group_by" string="Agrupar por">
					<filter name="group_by_warehouse_id" string="Tienda"
						context="{'group_by': 'warehouse_id'}" />
					<filter name="group_by_product" string="Producto"
						context="{'group_by': 'product_id'}" />
					<filter name="group_by_product_category" string="Categoria de Producto"
						context="{'group_by': 'product_categ_id'}" />
				</group>
			</search>
		</field>
	</record>

	<record model="ir.actions.act_window" id="action_report_purchase_stock_graph_view">
		<field name="name">Prevision de Stock vs Compras</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">report.purchase.stock</field>
		<field name="view_type">form</field>
		<field name="view_mode">pivot,graph</field>
		<field name="context">{}</field>
		<field name="view_id" ref="report_purchase_stock_pivot_view" />
		<field name="search_view_id" ref="report_purchase_stock_search_view" />
	</record>

	<menuitem id="report_purchase_stock_menu" parent="purchase.purchase_report"
		action="action_report_purchase_stock_graph_view" sequence="5" />

</odoo>