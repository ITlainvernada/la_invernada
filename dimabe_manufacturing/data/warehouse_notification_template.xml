<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="truck_not_out_mail_template" model="mail.template">
        <field name="name">move mp notification</field>
        <field name="model_id" ref="dimabe_manufacturing.model_mrp_production"/>
        <field name="email_from">info@lainvernada.com</field>
        <field name="email_to">
            ${object.}
        </field>
        <field name="subject">Movimiento de Fruta a Producción</field>
        <field name="body_html">
            <![CDATA[
                <p>Estimados,<br/><br/>
                Se informa que se necesita mover fruta a producción el día ${object.required_date_moving_to_production}

                <br/>
                </p>
                Atte,<br/>
                ${(object.company_id.name)}
            ]]>
        </field>
    </record>
</odoo>