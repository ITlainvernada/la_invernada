<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="view_process_report_laser_tree" model="ir.ui.view">
            <field name="name">Informe de Partido Laser</field>
            <field name="model">mrp.workorder</field>
            <field name="priority">20</field>
            <field name="arch" type="xml">
                <field name="potential_serial_planned_ids">
                    <tree>
                        <field name="serial_number"/>
                    </tree>
                </field>
                <field name="summary_out_serial_ids">
                    <tree>
                        <field name="serial_number"/>
                    </tree>
                </field>
            </field>
        </record>
        <record id="dimabe_manufacturing.process_report_laser" model="ir.actions.act_window">
            <field name="name">Informe de Partido Laser</field>
            <field name="res_model">stock.production.lot.serial</field>
            <field name="view_mode">tree,form,pivot</field>
            <field name="view_id" ref="view_process_report_laser_tree"/>
            <field name="domain">
                ['&amp;','|',('reserved_to_production_id','!=',None),('production_id','!=',None),('in_process_id','=','PARTIDO MECÁNICO/LÁSER'),('out_process_id','=','PARTIDO MECÁNICO/LÁSER')]
            </field>
        </record>
        <menuitem id="process_laser_menu"
                  action="dimabe_manufacturing.process_report_laser"
                  name="Informe de Proceso Partido Mecánico / Laser"
                  parent="process_report_menu"
        />
    </data>
</odoo>