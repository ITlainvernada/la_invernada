<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="view_stock_report_match_tree" model="ir.ui.view">
            <field name="name">Informe de Partido</field>
            <field name="model">mrp.workorder</field>
            <field name="priority">20</field>
            <field name="arch" type="xml">
                <tree name="Informe de Partido">
                    <field name="product_id" string="Producto"/>
                    <field name="product_variety" string="Variedad"/>
                    <field name="location_id" string="Ubicacion"/>
                    <field name="product_qty" string="Kilos"/>

                </tree>
            </field>
        </record>
         <record id="dimabe_manufacturing.stock_report_match" model="ir.actions.act_window">
            <field name="name">Informe de Partido</field>
            <field name="res_model">mrp.workorder</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_stock_report_match_tree"/>
             <field name="domain">
                 ['|',('production_id.routing_id.code','=','RO/00006'),('production_id.routing_id.code','=','RO/00007')]
             </field>
        </record>
        <menuitem id="stock_report_match_menu"
                  action="dimabe_manufacturing.stock_report_match"
                  name="Informe de Partido"
                  parent="stock.menu_warehouse_report"
        />
    </data>
</odoo>