<odoo>
  <template id="oven_use_label_report">
    <t t-call="web.html_container">
      <div class="page">
        <t t-foreach="docs" t-as="o">
          <t t-foreach="o.used_lot_ids" t-as="lot">
            <table>
              <tr>
                <th>Información Cajón</th>
                <td style="text-align: right !important;">
                  <span t-field="o.dried_oven_id.name"/>
                </td>
              </tr>
              <tr>
                <th>N° guía:</th>
                <td>
                  <span t-esc="o"/>
                </td>
              </tr>
              <tr>
                <th>Productor:</th>
                <td><span t-field="lot.producer_id.name" /></td>
              </tr>
              <tr>
                <th>Variedad:</th>
                <td>
                  <span t-esc="lot.product_id.get_variety()"/>
                </td>
              </tr>
              <tr>
                <th>N° Lote:</th>
                <td><span t-field="lot.name" /></td>
              </tr>
              <tr>
                <th>Fecha recepción / hr:</th>
                <td><span t-field="lot.create_date" /></td>
              </tr>
              <tr>
                <th>Fecha en cajón:</th>
                <td><span t-field="o.init_date" /></td>
              </tr>
              <tr>
                <td colspan="2">
                  <span t-field="lot.name" />
                  <img
                    t-att-src="'%s/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % (o.get_full_url(), 'Code128',lot.name,550, 70)"
                  />
                </td>
              </tr>
            </table>
            <br/>
          </t>
        </t>
      </div>
    </t>
  </template>

  <report id="dimabe_manufacturing.action_oven_use_label_report"
          string="Etiqueta para Salida de Proceso"
          model="oven.use"
          report_type="qweb-pdf"
          name="dimabe_manufacturing.oven_use_label_report"
          paperformat="paper_format_10_x_7"
  />
</odoo>