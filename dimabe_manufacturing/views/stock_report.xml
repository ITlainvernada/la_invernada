<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_stock_report_tree" model="ir.ui.view">
            <field name="name">Informe de Materia Prima</field>
            <field name="model">stock.quant</field>
            <field name="priority">20</field>
            <field name="arch" type="xml">
                <tree name="Informe de Materia Prima">
                    <field name="producer_id" widget="many2onebutton" string="Productor"/>
                    <field name="lot_id" widget="many2onebutton" string="Lote"/>
                    <field name="quantity" string="Kilos"/>
                    <field name="product_variety" string="Variedad"/>
                    <field name="product_caliber" string="Calibre"/>
                    <field name="location_id" widget="many2onebutton" string="Ubicacion"/>
                    <field name="product_id" widget="many2onebutton" string="Producto"/>
                    <field name="is_mp" />
                    <field name="serial_not_consumed"/>
                    <field name="reception_guide_number" />
                </tree>
            </field>
        </record>
                <record id="view_stock_report_pt_tree" model="ir.ui.view">
            <field name="name">Informe de Materia Prima</field>
            <field name="model">stock.quant</field>
            <field name="priority">20</field>
            <field name="arch" type="xml">
                <tree name="Informe de Materia Prima">
                    <field name="producer_id" widget="many2onebutton" string="Productor"/>
                    <field name="lot_id" widget="many2onebutton" string="Lote"/>
                    <field name="quantity" string="Kilos"/>
                    <field name="product_variety" string="Variedad"/>
                    <field name="product_caliber" string="Calibre"/>
                    <field name="location_id" widget="many2onebutton" string="Ubicacion"/>
                    <field name="product_id" widget="many2onebutton" string="Producto"/>
                    <field name="is_mp" />

                    <field name="reception_guide_number" />
                </tree>
            </field>
        </record>
        <record id="dimabe_manufacturing.stock_report" model="ir.actions.act_window">
            <field name="name">Informe de Materia prima</field>
            <field name="res_model">stock.quant</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_stock_report_tree"/>
            <field name="domain">
                [('quantity','>',0),('product_id.categ_id.parent_id.name','like','Materia Prima')]
            </field>
        </record>
        <record id="dimabe_manufacturing.stock_report_pt" model="ir.actions.act_window">
            <field name="name">Informe de Producto Terminado</field>
            <field name="res_model">stock.quant</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_stock_report_pt_tree"/>
            <field name="domain">
                [('id','!=',False),('quantity','>',0)]
            </field>
        </record>
        <menuitem id="stock_report_tree_menu"
                  action="dimabe_manufacturing.stock_report"
                  name="Informe de Materia Prima"
                  parent="stock.menu_warehouse_report"
        />
        <menuitem id="stock_report_pt_menu"
                  action="dimabe_manufacturing.stock_report_pt"
                  name="Informe de PT"
                  parent="stock.menu_warehouse_report"
                  />
    </data>
</odoo>