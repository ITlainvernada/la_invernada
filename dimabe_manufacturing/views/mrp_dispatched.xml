<odoo>
    <data>
        <record id="view_mrp_dispatched_tree" model="ir.ui.view">
            <field name="name">Despachos</field>
            <field name="model">stock.picking</field>
            <field name="arch" type="xml">
                <tree string="Dispatched">
                    <field name="required_loading_date" string="Fecha de Carga" />
                    <field name="partner_id" string="Cliente" />
                    <field name="country" string="Pais" />
                    <field name="variety" widget="many2many_tags" string="Atributos" />
                    <field name="origin" string="Documento Origen" />
                    <field name="product"/>
                    <field name="state" string="Estado" />
                    <field name="shipping_number" string="Embarque" />
                    <field name="charging_mode" string="Modo de Carga" />
                    <field name="client_label" string="Etiqueta Cliente" />
                    <field name="quantity_done" string="Kilos a Envasar" />
                    <button string="Crear PO" name="%(action_mrp_production)d" type="action" context="{'default_product_qty':quantity_done}" />
                </tree>
            </field>
        </record>
        <record id="action_mrp_production" model="ir.actions.act_window">
            <field name="name">Order de Produccion</field>
            <field name="res_model">mrp.production</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="mrp.mrp_production_form_view"/>
            <field name="target">new</field>
        </record>
        <record id="action_mrp_dispatched" model="ir.actions.act_window">
            <field name="name">Dispatched</field>
            <field name="res_model">stock.picking</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('state', '!=', 'cancel')]</field>
        </record>

        <menuitem id="menu_mrp_dispatched_root" name="Despachos" parent="mrp.menu_mrp_root" groups="base.group_user" />
        <menuitem id="mrp_dispatched_child" name="Despachos" parent="menu_mrp_dispatched_root" action="action_mrp_dispatched" />
    </data>
</odoo>