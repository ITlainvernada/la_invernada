<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="update_quant_view" model="ir.ui.view">
            <field name="name">Actualizar Lote</field>
            <field name="model">update.stock.quant</field>
            <field name="arch" type="xml">
                <form string="Actualizar Lotes">
                    <group>
                        <field name="lot_id" domain="[('id','=',lot_ids)]"/>
                        <field name="lot_ids" invisible="1"/>
                    </group>
                    <footer>
                        <button type="object" string="Actualizar" name="update"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>