<odoo>
  <data>
    <record id="mrp_production_form_view_inherit" model="ir.ui.view">
      <field name="name">formulario producción</field>
      <field name="model">mrp.production</field>
      <field name="inherit_id" ref="mrp.mrp_production_form_view" />
      <field name="arch" type="xml">
        <xpath expr="//header" postition="after">
          <button name="calculate_done"
                  type="object"
                  string="Calcular Realizado"
                  attrs="{'invisible':[('state', '!=', 'progress')]}"
          />
        </xpath>
        <xpath expr="//field[@name='finished_move_line_ids']/tree"
               postition="inside">
          <field name="count_stock_production_lot_serial" />
        </xpath>
        <xpath expr="//page[@name='miscellaneous']" postition="after">
          <page string="COMEX" id="export_data">
            <group name="export_data" position="inside">
              <group string="Información de envío" style="width:100%%">
                <group>
                  <!--
                  <field name="reserved_amount"/>
                  -->
                  <field name="shipping_number" />
                  <field name="contract_correlative_view" />
                  <field name="contract_correlative" invisible="1" />
                  <field name="shipping_id" />
                  <field name="agent_id" />
                  <field name="total_commission" />
                  <field name="charging_mode" />
                  <field name="booking_number" />
                  <field name="bl_number" />
                  <field name="container_number" placeholder="Ingrese número de contenedor" />
                  <field name="container_type" placeholder="Seleccione el tipo de contenedor" />
                </group>
                <group>
                  <field name="client_label" />
                  <field name="client_label_file" attrs="{'invisible':[('client_label', '=', False)]}" />
                  <field name="freight_value" />
                  <field name="safe_value" />
                  <field name="total_value" />
                  <field name="value_per_kilogram" />
                </group>
              </group>
              <group style="width:100%%">
                <group>
                  <field name="remarks" />
                </group>
              </group>
            </group>
          </page>
        </xpath>
      </field>
    </record>
  </data>
</odoo>