<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Inherit Form Invoice View -->
        <record id="mblz_invoice_form_inherit" model="ir.ui.view">
            <field name="name">invoice.form.inherit</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">

                <xpath expr="/form/sheet/notebook/page[1]/field[@name='invoice_line_ids']/tree/field[@name='invoice_line_tax_ids']" position="attributes">
                    <attribute name="required">0</attribute>
                </xpath>

            </field>
        </record>
    </data>
</odoo>