<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="CashInOutTicket">
        <div class="pos-sale-ticket">
        	<div class="pos-center-align">
				<t t-esc="widget.pos.company.name" />
				<br />
				<t t-if="widget.pos.company.contact_address">
					<t t-esc="widget.pos.company.contact_address" />
					<br />
				</t>
				<t t-if="widget.pos.company.phone">
					Telefono:
					<t t-esc="widget.pos.company.phone || ''" /> <br />
				</t>
				<t t-if="widget.pos.company.email">
					<t t-esc="widget.pos.company.email || ''" />
					<br />
				</t>
				<t t-if="widget.pos.company.website">
					<t t-esc="widget.pos.company.website || ''" />
					<br />
				</t>
				<div>---------------------------------</div>
			</div>
			<t t-if="receipt.header">
				<div style='text-align:center'>
					<t t-esc="receipt.header" />
				</div>
				<br />
			</t>
			Cajero: <t t-esc="receipt.cashier" /><br />
            Operacion: <t t-esc="money_data.operation" /><br />
            Motivo: <t t-esc="money_data.reason" /><br />
            Monto: <t t-esc="widget.format_currency(money_data.amount)" /><br />
            <br /><br /><br /><br /><br /><br />
            <div style="text-align: center;">---------------------------------</div>
            <div style="text-align: center;">Firma</div><br /><br /><br />
            <t t-if="widget.pos.config.receipt_footer">
                <br />
                <div style='text-align:center'>
                    <t t-esc="widget.pos.config.receipt_footer" />
                </div>
            </t>
        </div>
    </t>
    
    <t t-name="XmlCashInOutTicket">
    <receipt align='center' width='40' value-thousands-separator=''>
    	<t t-if='receipt.company.logo'>
            <img t-att-src='receipt.company.logo' alt="Logo"/>
            <br/>
        </t>
        <t t-if='!receipt.company.logo'>
            <h1><t t-esc='receipt.company.name' /></h1>
            <br/>
        </t>
        <div font='b'>
            <t t-if='receipt.company.contact_address'>
                <div><t t-esc='receipt.company.contact_address' /></div>
            </t>
            <t t-if='receipt.company.phone'>
                <div>Tel:<t t-esc='receipt.company.phone' /></div>
            </t>
            <t t-if='receipt.company.email'>
                <div><t t-esc='receipt.company.email' /></div>
            </t>
            <t t-if='receipt.company.website'>
                <div><t t-esc='receipt.company.website' /></div>
            </t>
            <t t-if='receipt.header_xml'>
                <t t-raw='receipt.header_xml' />
            </t>
            <t t-if='!receipt.header_xml and receipt.header'>
                <div><t t-esc='receipt.header' /></div>
            </t>
            <div>---------------------------------</div>
        </div>
		<div align='left'>
			<t t-if='receipt.cashier'>
				<div class='cashier'>
					<div>Cajero <t t-esc='receipt.cashier' /></div>
				</div>
			</t>
	        <div>Operacion: <t t-esc="money_data.operation" /></div>
			<div>Motivo: <t t-esc="money_data.reason" /></div>
			<div>Monto: <t t-esc="widget.format_currency(money_data.amount)" /></div>
		</div>
		<br /><br /><br /><br /><br /><br />
		<div align='center'>
			<div>---------------------------------</div>
			<div>Firma</div><br /><br /><br />
			<t t-if="widget.pos.config.receipt_footer">
				<br />
				<div style='text-align:center'>
					<t t-esc="widget.pos.config.receipt_footer" />
				</div>
			</t>
		</div>
        </receipt>
    </t>

</templates>
