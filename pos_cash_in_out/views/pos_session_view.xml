<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="pos_session_form_view" model="ir.ui.view">
		<field name="name">pos.session.form</field>
		<field name="model">pos.session</field>
		<field name="inherit_id"
			ref="point_of_sale.view_pos_session_form" />
		<field name="arch" type="xml">
			<xpath expr="//field[@name='cash_register_id']" position="after">
				<field name="enable_cash_in_out" invisible="1"/>
			</xpath>
			<xpath expr="//button[@name='%(point_of_sale.action_pos_box_in)d']" position="attributes">
				<attribute name="attrs">{'invisible': ['|', '|', ('cash_control', '=', False), ('state', 'not in', ['opened', 'closing_control']), ('enable_cash_in_out', '=', False)]}</attribute>
			</xpath>
			<xpath expr="//button[@name='%(point_of_sale.action_pos_box_out)d']" position="attributes">
				<attribute name="attrs">{'invisible': ['|', '|', ('cash_control', '=', False), ('state', 'not in', ['opened', 'closing_control']), ('enable_cash_in_out', '=', False)]}</attribute>
			</xpath>
		</field>
	</record>
	
	<!-- las opciones que aparecen en el menu Accion ocultarlas ya que no puede ser algo dinamico como los botones mejor ocultarlas -->
	<record id="point_of_sale.action_pos_box_in" model="ir.actions.act_window">
		<field name="groups_id" eval="[(6, 0, [ref('base.group_system')])]" />
	</record>
	<record id="point_of_sale.action_pos_box_out" model="ir.actions.act_window">
		<field name="groups_id" eval="[(6, 0, [ref('base.group_system')])]" />
	</record>
</odoo>