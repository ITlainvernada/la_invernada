<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_stock_picking_form" model="ir.ui.view">
        <field name="name">stock.picking.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">
            <field name="location_dest_id" position="after">
                <field name="is_inter_company" invisible="1"/>
                <field name="company_dest_id" domain="[('id','!=',context.get('company_id',False))]" attrs="{'invisible': [('is_inter_company','=',False)], 'required': [('is_inter_company','=',True)]}"/>
                <field name="company_dest_id" string="Compañía Origen" domain="[('id','!=',context.get('company_id',False))]" attrs="{'invisible': [('do_inter_company_auto','=',False)], 'required': [('do_inter_company_auto','=',True)]}" help="De que compañía se realizará la transferencia interna para re-abastecimiento"/>
            </field>

            <field name="origin" position="after">
                <field name="is_inter_company_auto" attrs="{'invisible': [('is_inter_company','=',False)]}"/>
                <field name="do_inter_company_auto" attrs="{'invisible': [('picking_type_code','!=','outgoing')]}"/>
                <field name="move_transfer_count" invisible="1"/>
            </field>

            <xpath expr="//notebook" position="inside">
                <page string="Transferencia Inter-Company" attrs="{'invisible': [('move_transfer_count','=',0)]}">
                    <field name="move_transfer_ids" readonly="1"/>
                </page>
            </xpath>

            <xpath expr="//field[@name='move_line_ids_without_package']/tree/field[@name='qty_done']" position="after">
                <button name="action_view_stock" type="object" icon="fa-cubes" string="Stock" />
            </xpath>
        </field>
    </record>
</odoo>