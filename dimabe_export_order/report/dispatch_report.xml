<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<template id="report_truck_dispatch">
		<t t-call="web.html_container">
			<t t-foreach="docs" t-as="o">
				<img t-if="o.datas" t-att-src="'data:o.mimetype;base64,%s' % to_text(o.datas)" width="250px" height="250px" />
			</t>
		</t>
	</template>
	<template id="report_dispatch_guide">
		<t t-call="web-html_container">
			<t t-foreach="docs" t-as="o">
				<div class="page">
					<table style="width:100% !important; border:1px solid; text-align:center;">
						<th style="padding:10px">
							Informe de Despacho
						</th>
						<th>
							<img
								t-att-src="'data:image/png;base64,%s' % to_text(res_company.logo)"
								style="width:200px !important;"
							/>
						</th>
					</table>
				</div>
			</t>
		</t>
	</template>
	<report id="action_dispatch_guide_report" string="Guia de despacho" model="stock.picking" report_type="qweb-pdf" name="dimabe_export_order.report_dispatch_guide" menu="True"/>
	<report id="action_dispatch_label_report" string="Informe despacho" model="ir.attachment" report_type="qweb-pdf" name="dimabe_export_order.report_truck_dispatch" />
</odoo>
