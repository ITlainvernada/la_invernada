<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<template id="report_truck_dispatch">
		<t t-call="web.html_container">
			<t t-foreach="docs" t-as="o">
				<img t-if="o.datas" t-att-src="'data:o.mimetype;base64,%s' % to_text(o.datas)" width="250px" height="250px" />
			</t>
		</t>
	</template>
	<template id="report_dispatch_guide">
		<t t-call="web.html_container">
			<t t-foreach="docs" t-as="dispatch">
				<div class="page">
					<table style="width:100% !important; border:1px solid; text-align:center;">
						<tr>
							<th style="padding:10px">
							Informe de Despacho
							</th>
						<th>
							<img
								t-att-src="'data:image/png;base64,%s' % to_text(res_company.logo)"
								style="width:200px !important;"
							/>
						</th>
						</tr>
					</table>
					<table border="1"  style="width:50% !important;text-align:center;">
						<tr>
							<td style="font-weight:bold;">Numero de Embarque:</td>
							<td><span t-field="dispatch.shipping_number"></span></td>
						</tr>
						<tr>
							<td style="font-weight:bold;">Guia de Despacho</td>
							<td><span t-field="dispatch.id"></span></td>
						</tr>
						<tr>
							<td style="font-weight:bold;">Numero de Contenedor</td>
							<td><span t-field="dispatch.container_number"></span></td>
						</tr>
						<tr>
							<td>Nombre de Transportista</td>
							<td><span t-field="dispatch.carrier_id"></span></td>
						</tr>
					</table> 
				</div>
			</t>
		</t>
	</template>

	<record id="paper_format_letter_horizontal" model="report.paperformat">
		<field name="name">Carta Horizontal</field>
		<field name="default" eval="False"/>
		<field name="format">Letter</field>
		<field name="orientation">Landscape</field>
		<field name="margin_top">40</field>
		<field name="margin_bottom">25</field>
		<field name="margin_left">7</field>
		<field name="margin_right">7</field>
	</record>

	<report id="action_dispatch_guide_report" string="Guia de despacho" model="stock.picking" report_type="qweb-pdf" name="dimabe_export_order.report_dispatch_guide" menu="True" paperformat="paper_format_letter_horizontal"/>
	<report id="action_dispatch_label_report" string="Informe despacho" model="ir.attachment" report_type="qweb-pdf" name="dimabe_export_order.report_truck_dispatch" />
</odoo>
