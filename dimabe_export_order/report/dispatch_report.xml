<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<template id="report_truck_dispatch">
		<t t-call="web.html_container">
			<t t-foreach="docs" t-as="o">
				<img t-if="o.datas" t-att-src="'data:o.mimetype;base64,%s' % to_text(o.datas)" width="250px" height="250px" />
			</t>
		</t>
	</template>
	<template id="report_dispatch_guide">
		<t t-call="web.html_container">
			<t t-foreach="docs" t-as="dis">
				<div class="page">
					<table style="width:100% !important; border:1px solid; text-align:center;">
						<tr style="padding:10px;">
							<th>REGISTRO ORDEN DE DESPACHO</th>
							<th>
								<img
									t-att-src="'data:image/png;base64%s' % to_text(res_company.logo)"
									style="width:200px !important;"
								/>
							</th>
						</tr>
					</table>
					<br/>
					<div class="row mt32 mb32">
						<div class="col-lg-4">
							<table class="table table-bordered">
								<th>Numero de Embarque</th>
								<th><span t-field="dis.shipping_number"></span></th>
							</table>
						</div>
					</div>
				</div>
			</t>
		</t>
	</template>

	<record id="paper_format_letter_horizontal" model="report.paperformat">
		<field name="name">Carta Horizontal</field>
		<field name="default" eval="False"/>
		<field name="format">Letter</field>
		<field name="orientation">Landscape</field>
		<field name="margin_top">40</field>
		<field name="margin_bottom">25</field>
		<field name="margin_left">7</field>
		<field name="margin_right">7</field>
	</record>

	<report id="action_dispatch_guide_report" string="Guia de despacho" model="stock.picking" report_type="qweb-pdf" name="dimabe_export_order.report_dispatch_guide" menu="True" paperformat="paper_format_letter_horizontal"/>
	<report id="action_dispatch_label_report" string="Informe despacho" model="ir.attachment" report_type="qweb-pdf" name="dimabe_export_order.report_truck_dispatch" />
</odoo>
