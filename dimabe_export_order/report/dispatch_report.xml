<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_dispatch_guide">
        <t t-call="web.html_container">
            <div class="page" style="margin:auto;">
                <t t-foreach="docs" t-as="d">
                    <div style="width:100%;">
                        <div style="width:33.3%;display:inline-block;">
                            <img t-att-src="'data:image/png;base64,%s' % to_text(res_company.logo)"
                                 style="height:75px;"
                            />
                        </div>
                        <div style="width:33.3%;display:inline-block;">
                            <table style="margin: 0 auto;font-size:12px;">
                                <tr>
                                    <td style="text-align:center;">
                                        <span t-field="res_company.name"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="text-align:center;">
                                        <span t-field="res_company.street"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="text-align:center;">
                                        <span t-field="res_company.city"/>
                                        <span t-field="res_company.country_id"/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div style="width:32.3%;display:inline-block;">
                            <table style="border:3px solid;">
                                <tr>
                                    <td style="text-align:center;">
                                        R.U.T
                                        <span t-field="res_company.invoice_rut"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td style="text-align:center;">
                                        GUIA DE DESPACHO ELECTRONICA
                                    </td>
                                </tr>
                                <tr>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td style="text-align:center;">
                                        N°
                                        <span t-field="d.guide_number"></span>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <br/>
                    <div style="width:100%;height:10px;font-size:12px;"></div>
                    <br/>
                    <span style="text-align:left;font-size:12px;" t-esc="d.create_date.date()"></span>
                    <div style="width:100%;margin:0 auto;border:1px solid;">
                        <table style="width:90%;margin 0 auto;font-size:11px;" cellspacing="8">
                            <tr>
                                <tr>
                                    <td>
                                        <strong>SEÑOR(ES):</strong>
                                    </td>
                                    <td style="text-align:left;">
                                        <span t-field="d.partner_id"></span>
                                    </td>
                                    <td style="text-align:left;">
                                        <strong>R.U.T:</strong>
                                    </td>
                                    <td style="text-align:left;">
                                        <span t-esc="d.partner_id.invoice_rut"></span>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="text-align:left;">
                                        <strong>DIRECCION:</strong>
                                    </td>
                                    <td style="text-align:left;">
                                        <span t-field="d.partner_id.street"></span>
                                    </td>
                                    <td style="text-align:left;">
                                        <strong>TELEFONO:</strong>
                                    </td>
                                    <td style="text-align:left;">
                                        <span t-field="d.partner_id.phone"></span>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="text-align:left;">
                                        <strong>COMUNA:</strong>
                                    </td>
                                    <td style="text-align:left;">
                                        <span t-field="d.partner_id.state_id"></span>
                                    </td>
                                    <td style="text-align:left;">
                                        <strong>VENCTO:</strong>
                                    </td>
                                    <td style="text-align:left;"><![CDATA[&nbsp;]]></td>
                                </tr>
                                <tr>
                                    <td style="text-align:left;">
                                        <strong>GIRO:</strong>
                                    </td>
                                    <td style="text-align:left;"><![CDATA[&nbsp;]]></td>
                                    <td style="text-align:left;">
                                        <strong>COND.PAGO:</strong>
                                    </td>
                                    <td style="text-align:left;"><![CDATA[&nbsp;]]></td>
                                </tr>
                                <t t-if="d.type_of_dispatch == 'nac'">
                                    <tr>
                                        <td>
                                            <strong>TIPO DE TRASLADO:</strong>
                                        </td>
                                        <td>
                                            <span t-field="d.type_of_transfer"></span>
                                        </td>
                                    </tr>
                                </t>
                            </tr>
                        </table>
                    </div>
                    <div style="width:100%;margin:0 auto;height:635px;border:1px solid;">
                        <table style="width:100%;font-size:11px;">
                            <th style="width:20%;border-right:1px solid;border-bottom:1px solid;">CANTIDAD</th>
                            <th style="width:60%;border-right:1px solid;border-bottom:1px solid;border-left:1px solid;">
                                DETALLES
                            </th>
                            <th style="width:20%;border-bottom:1px solid;border-left:1px solid;">VALOR UNITARIO</th>
                            <t t-foreach="d.move_ids_without_package" t-as="m">
                                <tr>
                                    <td style="width:20%;border-right:1px solid;border-bottom:1px solid;">
                                        <t t-esc="'{0:,.2f}'.format(int(m.quantity_done))"/>
                                    </td>
                                    <td style="width:20%;border-right:1px solid;border-bottom:1px solid;border-left:1px solid;text-align:center;">
                                        <span t-field="m.product_id"/>
                                    </td>
                                    <td style="width:20%;border-left:1px solid;border-bottom:1px solid;text-align:center;">
                                        <span t-field="m.product_id.lst_price"/>
                                    </td>
                                    <t t-if="m.id == d.move_ids_without_package[-1].id">
                                        <tr>
                                            <td colspan="3">
                                                <t t-if="d.type_of_dispatch == 'exp'">
                                                    <table style="font-size:11px;">
                                                        <tr>
                                                            <td style="text-align:center;">
                                                                KILOS NETOS
                                                            </td>
                                                            <td>
                                                                <span t-field="d.net_weight_dispatch"/>
                                                            </td>
                                                            <td>N° CONTENEDOR</td>
                                                            <td>
                                                                <span t-field="d.container_number"/>
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>KILOS BRUTOS:</td>
                                                            <td>
                                                                <span t-field="d.gross_weight_dispatch"/>
                                                            </td>
                                                            <td>SELLO NAVIERA</td>
                                                            <td>
                                                                <span t-field="d.sell_shipping"/>
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>TARA CONTE:</td>
                                                            <td>
                                                                <span t-field="d.tare_container_weight_dispatch"/>
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>PESO VGM:</td>
                                                            <td>
                                                                <span t-field="d.vgm_weight_dispatch"/>
                                                            </td>
                                                        </tr>
                                                        <tr style="height:50%;">
                                                            <td>Nota</td>
                                                            <td colspan="3" style="text-align:center;">
                                                                <t t-esc="d.note_dispatched.get_full_note()"></t>
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>Nave:</td>
                                                            <td>
                                                                <t t-if="d.shipping_id.type_transport == 'terrestre'">
                                                                    <span t-field="d.type_transport"></span>
                                                                </t>
                                                                <t t-elif="d.shipping_id.type_transport != 'terrestre'">
                                                                    <span t-field="d.shipping_id.ship"></span>
                                                                </t>
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>N° DUS:</td>
                                                            <td>
                                                                <span t-field="d.dus_number"></span>
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>PTO EMBARQUE:</td>
                                                            <td>
                                                                <span t-field="d.shipping_id.departure_port"></span>
                                                            </td>
                                                            <td>SELLO INVERNADA</td>
                                                            <td>
                                                                <span t-field="d.sell_truck"></span>
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>PTO DESCARGA</td>
                                                            <td>
                                                                <span t-field="d.shipping_id.arrival_port"></span>
                                                            </td>
                                                            <td>N° RESERVA</td>
                                                            <td>
                                                                <span t-field="d.booking_number"></span>
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>TRANSPORTE:</td>
                                                            <td>
                                                                <span t-field="d.transport"></span>
                                                            </td>
                                                            <td>CANDADO GPS:</td>
                                                            <td>
                                                                <span t-field="d.gps_lock"></span>
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>CHOFER:</td>
                                                            <td>
                                                                <span t-field="d.carrier_id"></span>
                                                            </td>
                                                            <td>BOTON GPS:</td>
                                                            <td>
                                                                <span t-field="d.gps_button"></span>
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>RUT:</td>
                                                            <td>
                                                                <span t-field="d.carrier_rut"></span>
                                                            </td>
                                                            <td>CLIENTE:</td>
                                                            <td>
                                                                <span t-field="d.partner_id"></span>
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>CELULAR:</td>
                                                            <td>
                                                                <span t-field="d.carrier_cell_phone"></span>
                                                            </td>
                                                            <td>SELLO SAG:</td>
                                                            <td>
                                                                <span t-field="d.sell_sag"></span>
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td><![CDATA[&nbsp;]]></td>
                                                            <td><![CDATA[&nbsp;]]></td>
                                                            <td>N° Pedido:</td>
                                                            <td>
                                                                <span t-field="d.name"></span>
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <![CDATA[&nbsp;]]>
                                                        </tr>
                                                        <tr>
                                                            <td>Pte Camion:</td>
                                                            <td>
                                                                <span t-field="d.carrier_truck_patent"></span>
                                                            </td>
                                                            <td>Hora Llegada:</td>
                                                            <td>
                                                                <t t-esc="'%02d:%02d' % (int(d.hour_arrival),d.hour_arrival % 1 * 60)"/>
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>Pte Rampla:</td>
                                                            <td>
                                                                <span t-field="d.carrier_cart_patent"></span>
                                                            </td>
                                                            <td>Hora Salida</td>
                                                            <td>
                                                                <t t-esc="'%02d:%02d' % (int(d.hour_departure),d.hour_departure % 1 * 60)"/>
                                                            </td>

                                                        </tr>
                                                    </table>
                                                </t>
                                            </td>
                                        </tr>
                                    </t>
                                </tr>
                            </t>
                        </table>
                    </div>
                    <div style="width:100%;">
                        <img style="align:center;width:50%;"
                             src="https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcSvpUYgdP4YQoBwHx-DmNUazOh_Rgt0REdJWfvsEQwwP49Et5uY"/>
                    </div>
                    <div style="width:100%;height:5%;border:1px solid;">
                        <table style="font-size:11px;">
                            <tr>
                                <td>Nombre:</td>
                                <td style="border-bottom:1pt dotted black;width:50%;"></td>
                                <td>Rut:</td>
                                <td style="border-bottom:1pt dotted black;width:50%;"></td>
                            </tr>

                            <tr>
                                <td>Recinto:</td>
                                <td style="border-bottom:1pt dotted black;width:50%;"></td>
                            </tr>
                            <tr>
                                <td>Fecha:</td>
                                <td style="border-bottom:1pt dotted black;width:50%;"></td>
                                <td>Firma:</td>
                                <td style="border-bottom:1pt dotted black;width:50%;"></td>
                            </tr>
                        </table>
                    </div>
                </t>
            </div>
        </t>
    </template>

    <template id="report_weight_dispatch">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="dis">
                <div class="page">
                    <table style="width:100% !important; border:1px solid; text-align:center;">
                        <tr style="padding:10px;">
                            <th>REGISTRO ORDEN DE DESPACHO</th>
                            <th>
                                <img
                                        t-att-src="'data:image/png;base64,%s' % to_text(res_company.logo)"
                                        style="width:200px !important;"
                                />
                            </th>
                        </tr>
                    </table>
                    <br/>
                    <div style="position:relative;width:100%;overflow:hidden">
                        <div style="width:50%;float:left;">
                            <table style="text-align:left;border:1px solid;width:100%;">
                                <tr>
                                    <th style="border-right:1px solid;">NUMERO EMBARQUE</th>
                                    <td>
                                        <span t-field="dis.shipping_number"></span>
                                    </td>
                                </tr>
                                <tr>
                                    <th style="border-right:1px solid;">GUIA DESPACHO</th>
                                    <td>
                                        <span t-field="dis.guide_number"></span>
                                    </td>
                                </tr>
                                <tr>
                                    <th style="border-right:1px solid;">NUMERO CONTENEDOR</th>
                                    <td>
                                        <span t-field="dis.container_number"></span>
                                    </td>
                                </tr>
                                <tr>
                                    <th style="border-right:1px solid;">NOMBRE CHOFER</th>
                                    <td>
                                        <span t-field="dis.carrier_id"></span>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div style="width:50%;float:left" cellspacing="0">
                            <table style="text-align:left;border:1px solid;width:85%;margin-left:15%;">
                                <tr>
                                    <th style="border-right:1px solid;">PATENTE CAMION</th>
                                    <td style="text-right !important">
                                        <span t-field="dis.carrier_truck_patent"></span>
                                    </td>
                                </tr>
                                <tr>
                                    <th style="border-right:1px solid;">PATENTE CARRO</th>
                                    <td style="text-right !important">
                                        <span t-field="dis.carrier_cart_patent"></span>
                                    </td>
                                </tr>
                                <tr>
                                    <th style="border-right:1px solid;">RUN CHOFER</th>
                                    <td style="text-right !important">
                                        <span t-field="dis.carrier_rut"></span>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <br/>
                    <div style="width:100%;position:relative;">
                        <table style="width:100% !important; border:1px solid;">
                            <tr>
                                <td style="text-align=center;">PESAJES</td>
                            </tr>
                            <tr>
                                <th>PESO CON CARGA</th>
                                <td>
                                    <span t-field="dis.vgm_weight_dispatch"></span>
                                </td>
                            </tr>
                            <tr>
                                <th>PESO SIN CARGA</th>
                                <td>
                                    <span t-field="dis.tare_container_weight_dispatch"></span>
                                </td>
                            </tr>
                            <tr>
                                <th>PESO NETO</th>
                                <td>
                                    <span t-field="dis.net_weight_dispatch"></span>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </t>
        </t>
    </template>

    <template id="report_truck_dispatch">
        <t t-call="web.html_container">
            <t t-foreach="docs.sorted(key=lambda x: x.create_date)" t-as="o">
                <t t-if="(o_index + 1) == 3 or (o_index + 1) == 6 or (o_index + 1) == 9">
                    <img t-att-src="'data:o.mimetype;base64,%s' % to_text(o.datas)" width="210px" height="270px"
                         HSPACE="45"
                         VSPACE="5"/>
                    <br/>
                </t>
                <t t-else="">
                    <img t-att-src="'data:o.mimetype;base64,%s' % to_text(o.datas)" width="200px" height="270px"
                         HSPACE="45"
                         VSPACE="5"/>
                </t>
            </t>
        </t>
    </template>

    <record id="paper_format_letter_custom" model="report.paperformat">
        <field name="name">Carta Custom</field>
        <field name="default" eval="False"/>
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="margin_top">5</field>
        <field name="margin_bottom">0</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">0</field>
        <field name="footer_line" eval="False"/>
        <field name="dpi">90</field>
    </record>

    <record id="paper_format_letter_horizontal" model="report.paperformat">
        <field name="name">Carta Horizontal</field>
        <field name="default" eval="False"/>
        <field name="format">Letter</field>
        <field name="orientation">Landscape</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="margin_top">5</field>
        <field name="margin_bottom">0</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">0</field>
        <field name="footer_line" eval="False"/>
        <field name="dpi">90</field>
    </record>

    <report id="action_dispatch_weight_dispatch" string="Ticket Pesaje Despacho" model="stock.picking"
            report_type="qweb-pdf"
            name="dimabe_export_order.report_weight_dispatch" menu="True" paperformat="paper_format_letter_horizontal"/>

    <report id="action_dispatch_guide_report" string="Guia de despacho" model="stock.picking" report_type="qweb-pdf"
            name="dimabe_export_order.report_dispatch_guide" menu="True" paperformat="paper_format_letter_custom"
    />
    <report id="action_dispatch_label_report" string="Informe despacho" model="ir.attachment" report_type="qweb-pdf"
            name="dimabe_export_order.report_truck_dispatch" paperformat="paper_format_letter_custom"/>
</odoo>