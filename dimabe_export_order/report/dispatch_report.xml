<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<template id="report_dispatch">
		<t t-call="web.html_container">
			<t t-foreach="docs" t-as="o">
				<table>
					<tr>
						<td>
							<img t-if="o.datas_fname" t-att-src="'data:o.mimetype;base64,%s' % to_text(o.local_url)"/>
						</td>
					</tr>
					<tr>
						<td>
							<span t-field="o.mimetype"></span>
						</td>
					</tr>
					<tr>
						<td>
							<span t-field="o.description"></span>
						</td>
					</tr>
					<tr>
						<td>
							<span t-field="o.display_name"></span>
						</td>
					</tr>
					<tr>
						<td>
							<span t-field="o.local_url"></span>
						</td>
					</tr>
					<tr>
						<td>
							<span t-field="o.res_name"></span>
						</td>
					</tr>
				</table>
			</t>
		</t>
	</template>
	<report id="action_dispatch_label_report" string="Informe despacho" model="ir.attachment" report_type="qweb-pdf" name="dimabe_export_order.report_dispatch" />
</odoo>
