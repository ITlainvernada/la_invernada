<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="orders_files_report_view" model="ir.ui.view">
        <field name="name">Archivo de Pedidos</field>
        <field name="model">sale.order</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <!--<field name="for_year"/>-->
                    </group>
                </group>
                <footer>
                    <button name="generate_orders_file" string="Generar XLSX" type="object" default_focus="1"
                            class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_orders_files_menu" model="ir.actions.act_window">
        <field name="name">Archivo de Pedidos</field>
        <field name="res_model">sale.order</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="orders_files_report_view"/>
        <field name="target">new</field>
    </record>


    <menuitem name="Archivo de Pedidos" 
              action="action_orders_files_menu" id="orders_files_item"/>

</odoo>
