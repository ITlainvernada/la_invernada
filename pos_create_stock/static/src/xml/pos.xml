<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
	
	<t t-name="PickingButton">
		<div class='control-button js_picking'>
			<i class="fa fa-truck"/>Create Picking
		</div>
    </t>
    
    <t t-name="InventoryButton">
		<div class='control-button js_picking'>
			<i class="fa fa-truck"/>Create Inventory
		</div>
    </t>
    
    <t t-name="SetInventory">
        <div class='control-button'>
            <i class='fa fa-truck' /> <t t-esc='widget.get_current_inventory_name()'/>
        </div>
    </t>
    
     <t t-name="PickingPopupWidget">
        <div class="modal-dialog">
            <div class="popup popup-textinput" style="height: 203px;">
                <p class="title">New Picking create</p>
                Your new picking is here: <a target="blank" t-att-href="widget.options.url">
                <t t-esc="widget.options.name" /></a>
                <div class="footer">
                    <div class="button cancel">
                        OK
                    </div>
                </div>
            </div>
        </div>
    </t>
    
    <t t-name="InventoryPopupWidget">
        <div class="modal-dialog">
            <div class="popup popup-textinput" style="height: 203px;">
                <p class="title">Inventory Adjustment</p>
                Your Inventory Adjustment is here: <a target="blank" t-att-href="widget.options.url">
                <t t-esc="widget.options.name" /></a>
                <div class="footer">
                    <div class="button cancel">
                        OK
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>