<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="pos_config_inherit_form_view" model="ir.ui.view">
		<field name="name">pos.config.inherit.form</field>
		<field name="model">pos.config</field>
		<field name="inherit_id"
			ref="point_of_sale.pos_config_view_form" />
		<field name="arch" type="xml">
			<div id="title" position="before">
				<field name="image" widget='image' class="oe_avatar" />
			</div>
			<xpath expr="//label[@for='available_pricelist_ids']/.."
				position="before">
				<div class="row mt16">
					<label string="Clave para cambiar de tarifa"
						for="pin_pricelist" class="col-lg-3 o_light_label" />
					<field name="pin_pricelist" password="True"
						attrs="{'invisible': [('use_pricelist','=',False)]}" />
				</div>
			</xpath>
		</field>
	</record>
	
	<record id="pos_config_inherit_kanban_view" model="ir.ui.view">
		<field name="name">pos.config.kanban</field>
		<field name="model">pos.config</field>
		<field name="groups_id" eval="[(6, 0, [ref('base.group_system')])]" />
		<field name="inherit_id"
			ref="point_of_sale.view_pos_config_kanban" />
		<field name="arch" type="xml">
			<xpath expr="/kanban" position="attributes">
				<attribute name="js_class">pos_kanban</attribute>
			</xpath>
		</field>
	</record>
</odoo>