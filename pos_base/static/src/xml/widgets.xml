<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <!-- count items widget -->
    <t t-name="StatusbarInfoWidget">
        <div class="oe_status js_proxy show_hide_buttons">
            <div class="js_connected oe_icon">
                <i class='fa fa-list'></i>
            </div>
        </div>
        <div class="oe_status js_proxy" id="count_item">
            <div class="js_connected oe_icon ">
                <i class='fa fa-list-ol'></i>
            </div>
            <div class="js_connected oe_icon">
                <span class="notification count_item">0</span>
            </div>
        </div>
        <div class="oe_status js_proxy" id="count_qty">
            <div class="js_connected oe_icon ">
                <i class='fa fa-cart-plus'></i>
            </div>
            <div class="js_connected oe_icon">
                <span class="notification count_qty">0</span>
            </div>
        </div>
    </t>
    
    <t t-name="UrlPopupWidget">
         <div class="modal-dialog">
            <div class="popup popup-textinput url_popup" style="height: 203px;">
                <p class="title"><t t-esc="widget.options.title" /></p>
                <div class='container pos-popup-box'>
					<div class='pos-row'>
						<t t-esc="widget.options.description" />
						<a target="blank" t-att-href="widget.options.url">
							<t t-esc="widget.options.name" />
						</a>
					</div>
                </div>
                <div class="footer">
                    <div class="button cancel">
                        OK
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>
