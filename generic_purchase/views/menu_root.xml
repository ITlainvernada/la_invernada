<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>

		<!-- reemplazar menu Compras/Presupuestos -->
		<record id="purchase.menu_purchase_rfq" model="ir.ui.menu">
			<field name="groups_id"
				eval="[(4, ref('purchase.group_purchase_user'))]" />
		</record>
		
		<!-- reemplazar menu Compras/Ordenes de Compra -->
		<record id="purchase.menu_purchase_form_action" model="ir.ui.menu">
			<field name="groups_id"
				eval="[(4, ref('purchase.group_purchase_user'))]" />
		</record>
		
		<!-- reemplazar menu para cambiar los grupos para menus de informes -->
		<!-- al asignar el menu de informes como parent de otros menus quitar la accion de ese menu -->
		<record id="purchase.purchase_report" model="ir.ui.menu">
			<field name="action" eval="False" />
			<field name="groups_id"
				eval="[(3, ref('purchase.group_purchase_manager')), 
						(4, ref('generic_purchase.group_purchase_report'))]" />
		</record>

		<!-- reemplazar menu para cambiar los grupos para menus de configuracion -->
		<record id="purchase.menu_purchase_config" model="ir.ui.menu">
			<field name="groups_id"
				eval="[(3, ref('purchase.group_purchase_manager')), 
						(4, ref('generic_purchase.group_purchase_config'))]" />
		</record>
		
		<!-- reemplazar menu para asignar grupos al menu de Control -->
		<record id="purchase.menu_purchase_control" model="ir.ui.menu">
			<field name="groups_id"
				eval="[(4, ref('purchase.group_purchase_user'))]" />
		</record>
		
		<!-- reemplazar menu para agregar grupo de UdM para menu de Unidades de Medida -->
		<record id="purchase.menu_purchase_uom_form_action" model="ir.ui.menu">
			<field name="groups_id"
				eval="[(4, ref('uom.group_uom'))]" />
		</record>
		
		<!-- reemplazar menu para agregar grupo de UdM para menu de Categorias de Unidades de Medida -->
		<record id="purchase.menu_purchase_uom_categ_form_action" model="ir.ui.menu">
			<field name="groups_id"
				eval="[(4, ref('uom.group_uom'))]" />
		</record>
		
		<!--  agregar un nuevo menu para el analisis de compras
			ya que menu original  se convierte en parent de todos los informes de compras -->
		<menuitem id="purchase_report" name="Analisis de Compras" parent="purchase.purchase_report" sequence="1"
        	action="purchase.action_purchase_order_report_all"/>
		
		<menuitem id="purchase.menu_product_in_config_purchase"
			parent="purchase.menu_purchase_config" groups="base.group_no_one,generic_purchase.group_purchase_config" />

	</data>
</odoo>