<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="purchase_report_search_view" model="ir.ui.view">
		<field name="name">purchase.report.search</field>
		<field name="model">purchase.report</field>
		<field name="inherit_id" ref="purchase.view_purchase_order_search" />
		<field name="arch" type="xml">
			<field name="date_order" position="attributes">
				<attribute name="widget">date</attribute>
			</field>
			<filter name="quotes" position="before">
				<filter name="this_month" string="Fecha" date="date_order" />
				<separator />
			</filter>
			<filter name="group_category_id" position="after">
				<filter name="group_by_product" string="Producto"
					context="{'group_by': 'product_id'}" />
			</filter>
		</field>
	</record>
	
	<record id="filter_purchase_report_categ" model="ir.filters">
		<field name="name">Por Categoria de Producto</field>
		<field name="model_id">purchase.report</field>
		<field name="user_id" eval="False" />
		<field name="context">{'group_by': ['category_id'], 'col_group_by': [], 'measures': ['unit_quantity', 'price_average', 'price_total']}</field>
	</record>

	<record id="filter_purchase_report_partner" model="ir.filters">
		<field name="name">Por Proveedor</field>
		<field name="model_id">purchase.report</field>
		<field name="user_id" eval="False" />
		<field name="context">{'group_by': ['partner_id'], 'col_group_by': [], 'measures': ['unit_quantity', 'price_average', 'price_total']}</field>
	</record>

	<record id="filter_purchase_report_product" model="ir.filters">
		<field name="name">Por Producto</field>
		<field name="model_id">purchase.report</field>
		<field name="user_id" eval="False" />
		<field name="context">{'group_by': ['product_id'], 'col_group_by': [], 'measures': ['unit_quantity', 'price_average', 'price_total']}</field>
	</record>

	<record id="purchase.filter_purchase_order_monthly_purchases"
		model="ir.filters">
		<field name="context">{'group_by': ['date_order:month'], 'col_group_by': [], 'measures': ['unit_quantity', 'price_average', 'price_total']}</field>
	</record>

	<record id="purchase.action_purchase_order_report_all" model="ir.actions.act_window">
		<field name="context">{'search_default_orders': 1, 'group_by_no_leaf':1,'group_by':[], 'search_default_this_month': 1}</field>
	</record>
</odoo>