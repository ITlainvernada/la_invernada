<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <template id="generic_portal_my_purchase_order" name="Portal: My Purchase Order" inherit_id="portal.portal_sidebar" primary="True">
        <xpath expr="//div[hasclass('o_portal_sidebar')]" position="inside">

            <div class="row mt16 o_portal_purchase_sidebar">
                <!-- Sidebar -->
                <t t-call="portal.portal_record_sidebar">
                    <t t-set="classes" t-value="'col-12 col-lg flex-lg-grow-0 d-print-none'"/>
                    <t t-set="title">
                        <h2 class="mb-0">
                            <b t-field="order.amount_total"/>
                        </h2>
                    </t>

                    <t t-set="entries">
                        <ul class="list-group list-group-flush flex-wrap flex-row flex-lg-column">
                            <li class="list-group-item flex-grow-1">
                                <div class="o_download_pdf btn-toolbar flex-sm-nowrap">
                                    <div class="btn-group  flex-grow-1 mr-1 mb-1">
                                        <a class="btn btn-secondary btn-block o_download_btn" t-att-href="order.get_portal_url(report_type='pdf', download=True)" title="Download"><i class="fa fa-download"/> Download</a>
                                    </div>
                                    <div class="btn-group flex-grow-1 mb-1">
                                        <a class="btn btn-secondary btn-block o_print_btn o_portal_purchase_print" t-att-href="order.get_portal_url(report_type='pdf')" id="print_purchase_report" title="Print" target="_blank"><i class="fa fa-print"/> Print</a>
                                    </div>
                                </div>
                            </li>
                            <li t-if="order.user_id" class="list-group-item flex-grow-1">
                                <div class="small mb-1"><strong class="text-muted">Your Contact</strong></div>
                                <div class="row">
                                    <div class="col flex-grow-0 pr-2">
                                        <img t-if="order.user_id.image" class="rounded-circle mt-1 o_portal_contact_img" t-att-src="image_data_uri(order.user_id.image)" alt="Contact"/>
                                        <img t-else="" class="rounded-circle mt-1 o_portal_contact_img" src="/web/static/src/img/user_menu_avatar.png" alt="Contact"/>
                                    </div>
                                    <div class="col pl-0">
                                        <span t-field="order.user_id" t-options='{"widget": "contact", "fields": ["name", "phone"], "no_marker": True}'/>
                                        <a data-toggle="modal" href="#" data-target="#purchase_chatter" class="small"><i class="fa fa-fw fa-comments"/><b>Send message</b></a>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </t>
                </t>

                <!-- Page Content -->
                <div id="purchase_content" class="o_portal_page_content col-12 col-lg d-flex flex-column align-items-end">
                    <div class="o_portal_page_size">
                        <div class="o_portal_html_view shadow">
                            <div class="o_portal_html_loader text-center">
                                <i class="fa fa-circle-o-notch fa-spin fa-2x fa-fw text-black-50"></i>
                            </div>
                            <iframe id="purchase_html" class="mt8 mb8" width="100%" height="100%" frameborder="0" scrolling="no" t-att-src="order.get_portal_url(report_type='html')"/>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </template>

    <template id="portal_purchase_chatter" name="Allow Comments &amp; History" inherit_id="generic_purchase.generic_portal_my_purchase_order">
        <xpath expr="//div[@id='purchase_content']//div[hasclass('o_portal_html_view')]" position="after">
            <div class="modal fade" id="purchase_chatter" role="dialog">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h3 class="mt0 ml16 mb0">History</h3>
                            <button type="button" class="close" data-dismiss="modal">&amp;times;</button>
                        </div>
                        <div class="modal-body">
                            <t t-call="portal.message_thread">
                                <t t-set="token" t-value="order.access_token"/>
                                <t t-set="object" t-value="order"/>
                                <t t-set="pid" t-value="pid"/>
                                <t t-set="hash" t-value="hash"/>
                            </t>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </template>

</odoo>
