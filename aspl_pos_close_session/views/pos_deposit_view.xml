<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="pos_deposit_tree_view" model="ir.ui.view">
		<field name="name">pos.deposit.tree</field>
		<field name="model">pos.deposit</field>
		<field name="arch" type="xml">
			<tree create="0" decoration-info="state=='sent'"
				decoration-success="state=='done'"
				decoration-danger="state=='cancel'">
				<field name="name" />
				<field name="warehouse_id" />
				<field name="journal_id" />
				<field name="journal_dest_id" />
				<field name="deposit_date" />
				<field name="papeleta_number" />
				<field name="amount_cash" sum="Efectivo depositado" />
				<field name="company_id" groups="base.group_multi_company" />
				<field name="state" />
				<field name="currency_id" invisible="1" />
			</tree>
		</field>
	</record>

	<record id="pos_deposit_form_view" model="ir.ui.view">
		<field name="name">pos.deposit.form</field>
		<field name="model">pos.deposit</field>
		<field name="arch" type="xml">
			<form create="0">
				<header>
					<button name="action_sent" states="draft"
						string="Enviar a Depositar" type="object"
						groups="point_of_sale.group_pos_manager" class="oe_highlight" />
					<button name="action_done" states="sent"
						string="Confirmar Deposito" type="object"
						groups="account.group_account_user" class="oe_highlight" />
					<button name="%(action_report_pos_deposit)d"
						states="sent,done" string="Comprobante" type="action"
						groups="point_of_sale.group_pos_manager,account.group_account_user"
						class="oe_highlight fa fa-file-pdf-o" />
					<button name="action_cancel" states="sent,done"
						string="Cancelar Deposito" type="object"
						groups="account.group_account_user"
						confirm="Está seguro de cancelar este registro?. Ésta operación no puede revertirse" />
					<field name="state" widget="statusbar"
						statusbar_visible="sent,done" />
				</header>
				<sheet>
					<div class="oe_button_box" name="button_box">
						<button class="oe_stat_button" name="action_view_payments"
							string="Movimientos efectuados" type="object"
							groups="account.group_account_user" states="sent,done"
							icon="fa-bars" />
					</div>
					<div class="oe_title">
						<label for="name" />
						<h1>
							<field name="name" />
						</h1>
					</div>
					<group>
						<group>
							<field name="journal_id"
								options="{'no_create': True, 'no_open': True}" />
							<field name="journal_dest_id"
								domain="[('type','=','bank'), ('bank_account_id','!=',False), ('bank_account_id.partner_id','=',partner_company_id)]"
								options="{'no_create': True, 'no_open': True}" />
							<field name="warehouse_id"
								options="{'no_create': True, 'no_open': True}" />
							<field name="session_id" options="{'no_create': True}" />
							<field name="cash_register_id"
								options="{'no_create': True}" invisible="1" />
						</group>
						<group>
							<field name="deposit_date" required="1" />
							<field name="papeleta_number" />
							<field name="amount_cash" />
							<field name="company_id" groups="base.group_multi_company" />
							<field name="currency_id" invisible="1" />
							<field name="partner_company_id" invisible="1" />
						</group>
					</group>
				</sheet>
			</form>
		</field>
	</record>

	<record id="pos_deposit_search_view" model="ir.ui.view">
		<field name="name">pos.deposit.search</field>
		<field name="model">pos.deposit</field>
		<field name="arch" type="xml">
			<search>
				<field name="name" />
				<field name="warehouse_id" />
				<field name="session_id" />
				<field name="journal_id" />
				<field name="journal_dest_id" />
				<field name="deposit_date" />
				<field name="papeleta_number" />
				<group name="filter_by" string="Filtros">
					<filter name="this_month" string="Fecha" date="deposit_date" />
					<separator />
					<filter string="Borrador " name="filter_by_draft"
						domain="[('state','=','draft')]" />
					<filter string="Esperando confirmación"
						name="filter_by_sent" domain="[('state','=','sent')]" />
					<filter string="Confirmada" name="filter_by_done"
						domain="[('state','=','done')]" />
				</group>
				<group name="group_by" string="Agrupar por">
					<filter name="group_by_warehouse" string="Tienda"
						context="{'group_by': 'warehouse_id'}" />
					<filter name="group_by_journal" string="Diario"
						context="{'group_by': 'journal_id'}" />
					<filter name="group_by_journal_dest"
						string="Cuenta Bancaria" context="{'group_by': 'journal_dest_id'}" />
					<filter name="group_by_state" string="Estado"
						context="{'group_by': 'state'}" />
				</group>
			</search>
		</field>
	</record>

	<record model="ir.ui.view" id="pos_deposit_graph_view">
		<field name="name">pos.deposit.graph</field>
		<field name="model">pos.deposit</field>
		<field name="arch" type="xml">
			<graph>
				<field name="warehouse_id" />
				<field name="amount_cash" type="measure" />
			</graph>
		</field>
	</record>

	<record model="ir.ui.view" id="pos_deposit_pivot_view">
		<field name="name">pos.deposit.pivot</field>
		<field name="model">pos.deposit</field>
		<field name="arch" type="xml">
			<pivot string="Depositos del POS">
				<field name="warehouse_id" type="row" />
				<field name="deposit_date" interval="month" type="col" />
				<field name="amount_cash" type="measure" />
			</pivot>
		</field>
	</record>

	<act_window 
		id="pos_deposit_session_action" 
		name="Depositos"
		src_model="pos.session" 
		res_model="pos.deposit"
		context="{'search_default_session_id': active_id, 'default_session_id' : active_id}" />

	<record id="pos_deposit_action" model="ir.actions.act_window">
		<field name="name">Depositos del POS</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">pos.deposit</field>
		<field name="view_type">form</field>
		<field name="view_mode">tree,form</field>
		<field name="view_id" ref="pos_deposit_tree_view" />
		<field name="context">{'show_full_name': 1,'search_default_this_month': 1, 'search_default_filter_by_sent': 1}</field>
		<field name="search_view_id" ref="pos_deposit_search_view" />
	</record>

	<record model="ir.actions.act_window"
		id="action_pos_deposit_graph_view">
		<field name="name">Depositos del POS</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">pos.deposit</field>
		<field name="view_type">form</field>
		<field name="view_mode">pivot,graph</field>
		<field name="context">{'show_full_name': 1,'search_default_this_month': 1, 'search_default_filter_by_done': 1}</field>
		<field name="view_id" ref="pos_deposit_pivot_view" />
		<field name="search_view_id" ref="pos_deposit_search_view" />
	</record>

	<menuitem id="pos_deposit_menu" name="Depositos del POS"
		sequence="30" parent="account.menu_finance_receivables"
		action="pos_deposit_action" />

	<menuitem id="pos_deposit_analysis_menu"
		name="Depositos del POS" sequence="25"
		parent="account.account_reports_management_menu"
		action="action_pos_deposit_graph_view" />

</odoo>