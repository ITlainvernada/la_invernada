<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data>

       <record id="pos_sale_config_inherit_view" model="ir.ui.view">
            <field name="name">pos.sale.config.inherit.view</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
            <field name="arch" type="xml">
                <xpath expr = "//sheet" position="inside">
                    <h2>POS Close Session</h2>
                    <group col="4">
                        <field name="allow_with_zero_amount"/>
                        <field name="z_report_pdf"/>
                        <field name="email_close_session_report"/>
                        <field name="email_template_id"
                               attrs="{'invisible' : [('email_close_session_report', '=', False)],'required':[('email_close_session_report','!=',False)]}"/>
                        <field name="users_ids" widget="many2many_tags"
                               attrs="{'invisible' : [('email_close_session_report', '=', False)],'required':[('email_close_session_report','!=',False)]}"/>
                    </group>
                </xpath>
                <xpath expr = "//button[@name=%(point_of_sale.account_cashbox_line_action)d]/.." position="after">
                	 <div class="mt16 mb16">
                        <field name="no_change_cash_open" class="oe_inline"/>
                        <label string="Restringir saldo de apertura?" for="no_change_cash_open" class="o_form_label" />
                        <div class="text-muted">
                            Marque la opcion si desea que el saldo de cierre de la session actual, 
                            sea el saldo de apertura de la proxima session y el usuario no pueda cambiarlo
                            (solo puede ingresar la denominacion de monedas, 
                            pero el total debe ser igual al saldo final de la session anterior)
                        </div>
                    </div>
                </xpath>
            </field>
       </record>

    </data>
</odoo>
