<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="report_pos_deposit">
		<t t-call="web.html_container">
			<t t-foreach="docs" t-as="o">
				<t t-if="o and 'company_id' in o">
					<t t-set="company" t-value="o.company_id.sudo()" />
				</t>
				<t t-if="not o or not 'company_id' in o">
					<t t-set="company" t-value="res_company" />
				</t>
				<t t-call="web.basic_layout">
					<div class="page">
						<div class="text-center">
							<img t-if="company.logo"
								t-att-src="'data:image/png;base64,%s' % to_text(company.logo)"
								style="height: 80px;" />
						</div>
						<div class="row col-12">
							<strong>Comprobante: </strong>
							<span t-field="o.name" />
						</div>
						<div class="row col-12">
							<strong>Sesión: </strong>
							<span t-field="o.session_id" />
						</div>
						<div class="row col-12">
							<strong>Diario: </strong>
							<span t-field="o.journal_id.name" />
						</div>
						<div class="row col-12">
							<strong>Fecha de Depósito: </strong>
							<span t-field="o.deposit_date" />
						</div>
						<div class="row col-12" t-if="o.papeleta_number">
							<strong>Número de Papeleta: </strong>
							<span t-field="o.papeleta_number" />
						</div>
						<div class="row col-12">
							<strong>Cuenta Bancaria: </strong>
							<span t-field="o.journal_dest_id.name" />
						</div>
						<div class="row col-12">
							<strong>Tienda: </strong>
							<span t-field="o.warehouse_id" />
						</div>
						<div class="row col-12">
							<strong>Cantidad Depositada: </strong>
							<span t-field="o.amount_cash" />
						</div>
						<div class="row col-12">
							<strong>Estado: </strong>
							<span t-field="o.state" />
						</div>
					</div>
				</t>
			</t>
		</t>
	</template>
	
	<report 
		id="action_report_pos_deposit" 
		model="pos.deposit"
		report_type="qweb-pdf" 
		string="Depositos" 
		name="aspl_pos_close_session.report_pos_deposit"
		file="aspl_pos_close_session.report_pos_deposit" 
		paperformat="aspl_pos_close_session.paperformat_session_receipt_pdf" />

</odoo>
