<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="wizard_pos_deposit_form_view" model="ir.ui.view">
		<field name="name">wizard.pos.deposit.form</field>
		<field name="model">wizard.pos.deposit</field>
		<field name="arch" type="xml">
			<form string="Depositar dinero">
				<group>
					<group>
						<field name="journal_dest_id" required="1"
							domain="[('type','=','bank'), ('bank_account_id','!=',False), ('bank_account_id.partner_id','=',partner_company_id)]"
							options="{'no_create': True, 'no_open': True}" />
						<field name="deposit_date" required="1" />
						<field name="papeleta_number" />
						<field name="amount_cash" />
						<field name="partner_company_id" invisible="1" />
					</group>
					<group>
						<field name="cash_register_id" readonly="1" force_save="1"
							options="{'no_create': True, 'no_open': True}"
							context="{'name_pos': True}" />
						<field name="session_id"
							options="{'no_create': True, 'no_open': True}" force_save="1" />
						<field name="currency_id" invisible="1" />
					</group>
				</group>
				<footer>
					<div class="oe_left">
						<button name="action_deposit" string="Crear DepÃ³sito"
							type="object" class="oe_highlight" />
						<button string="Cerrar" special="cancel" type="object"
							class="oe_link" />
					</div>
				</footer>
			</form>
		</field>
	</record>

	<record id="wizard_pos_deposit_action"
		model="ir.actions.act_window">
		<field name="name">Depositar dinero</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">wizard.pos.deposit</field>
		<field name="view_type">form</field>
		<field name="view_mode">tree,form</field>
		<field name="view_id" ref="wizard_pos_deposit_form_view" />
		<field name="target">new</field>
	</record>

</odoo>