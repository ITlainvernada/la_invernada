<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record model="ir.ui.view" id="wizard_session_resume_form_view">
		<field name="name">wizard.session.resume.form</field>
		<field name="model">wizard.session.resume</field>
		<field name="arch" type="xml">
			<form string="Resumen de Cajas">
				<group>
					<group>
						<field name="date_from" required="1" />
					</group>
					<group>
						<field name="date_to" required="1" />
					</group>
				</group>
				<notebook colspan="2">
					<page string="Tiendas">
						<field name="warehouse_ids" options="{'no_create': True}" />
					</page>
				</notebook>
				<footer>
					<div class="oe_left">
						<button string="Generar reporte" name="action_print" type="object"
							class="oe_highlight" />
						<button string="Cerrar" special="cancel" type="object"
							class="oe_link" />
					</div>
				</footer>
			</form>
		</field>
	</record>

	<record model="ir.actions.act_window" id="action_wizard_session_resume_tree_view">
		<field name="name">Resumen de Cajas</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">wizard.session.resume</field>
		<field name="view_type">form</field>
		<field name="view_mode">tree,form</field>
		<field name="view_id" ref="wizard_session_resume_form_view" />
		<field name="target">new</field>
	</record>

	<menuitem id="wizard_session_resume_menu" name="Resumen de Cajas"
		sequence="5" parent="point_of_sale.menu_point_rep" action="action_wizard_session_resume_tree_view" />

</odoo>