<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<template id="report_saleorder_document_vat"
		inherit_id="sale.report_saleorder_document">
		<xpath expr="//p[@t-if='doc.partner_id.vat']" position="after">
			<t t-if="doc.partner_id.activity_description">
				<strong>Giro:</strong>
				<span t-field="doc.partner_id.activity_description" />
			</t>
		</xpath>
		<xpath expr="//p[@t-if='doc.partner_id.vat']"
			position="attributes">
			<attribute name="t-if">doc.partner_id.document_number</attribute>
		</xpath>
		<xpath expr="//span[@t-field='doc.partner_id.vat']"
			position="attributes">
			<attribute name="t-field">doc.partner_id.document_number</attribute>
		</xpath>
	</template>
</odoo>