<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record model="ir.ui.view" id="purchase_order_form_view">
			<field name="name">purchase.order.form</field>
			<field name="model">purchase.order</field>
			<field name="inherit_id" ref="purchase.purchase_order_form" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='company_id']" position="after">
					<field name="print_line_number" />
					<field name="print_image" />
					<field name="image_size" attrs="{'invisible': [('print_image', '=', False)]}" />
				</xpath>
				<xpath expr="//field[@name='order_line']/tree/field[@name='name']"
					position="after">
					<field name="product_image" readonly="1" widget="image"
						options="{'size': [90, 90]}" />
				</xpath>
			</field>
		</record>
	</data>
</odoo>
