<?xml version="1.0" encoding="UTF-8"?>
<odoo>

	<record model="ir.ui.view" id="wizard_accept_document_xml_form_view">
		<field name="name">wizard.accept.document.xml.form</field>
		<field name="model">wizard.accept.document.xml</field>
		<field name="arch" type="xml">
			<form>
				<div class="oe_grey"> Por favor especifique las opciones con las que se
					aceptara el documento, estas opciones se usaran cuando el producto
					no exista y sea necesario crearlo
				</div>
				<group colspan="2">
					<field name="force_create_product" groups="l10n_cl_account.group_create_product_xml" />
					<field name="product_type" widget="radio" required="1"
						options="{'horizontal': true}" />
					<field name="product_options" widget="radio" options="{'horizontal': true}"
						attrs="{'invisible': [('product_type','!=','product')], 'required': [('product_type','=','product')]}" />
					<field name="pricelist_id" options="{'no_create': True}" 
						attrs="{'invisible': ['|', '|', ('force_create_product','=',False), ('product_type','!=','product'), ('product_options','!=','sale')]}" />
					<field name="partner_account_id" options="{'no_create': True}" 
						domain="[('internal_type', '=', 'payable'), ('deprecated', '=', False)]"/>
					<label for="auto_validate_invoice" style="min-width: 220px;" />
					<field name="auto_validate_invoice" nolabel="1" />
					<field name="no_create_lines" />
					<field name="product_service_id" domain="[('type','=','service')]"
						attrs="{'invisible': [('no_create_lines','=',False)], 'required': [('no_create_lines','=',True)]}"
						options="{'no_create': True}" />
					<field name="account_id" options="{'no_create': True}"
						required="1" />
					<field name="account_analytic_id" options="{'no_create': True}"
						groups="analytic.group_analytic_accounting" />
				</group>
				<footer>
					<div class="oe_left">
						<button string="Aceptar Documento" name="action_accept"
							type="object" class="oe_highlight" />
						<button string="Cerrar" special="cancel" type="object" class="oe_link" />
					</div>
				</footer>
			</form>
		</field>
	</record>

</odoo>