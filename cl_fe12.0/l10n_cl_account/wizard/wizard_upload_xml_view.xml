<?xml version="1.0" encoding="UTF-8"?>
<odoo>

	<record model="ir.ui.view"
		id="sii_dte_upload_xml_wizard_form_view">
		<field name="name">sii.dte.upload_xml.wizard.form</field>
		<field name="model">sii.dte.upload_xml.wizard</field>
		<field name="inherit_id"
			ref="l10n_cl_fe.sii_dte_upload_xml_form" />
		<field name="arch" type="xml">
			<xpath expr="//field[@name='type']" position="after">
				<field name="force_create_product" 
					groups="l10n_cl_account.group_create_product_xml"
					attrs="{'invisible': [('pre_process','=',True)]}" />
				<field name="product_type" widget="radio" required="1"
					options="{'horizontal': true}"
					attrs="{'invisible': [('pre_process','=',True)]}" />
				<field name="product_options" widget="radio"
					options="{'horizontal': true}"
					attrs="{'invisible': ['|', ('product_type','!=','product'), ('pre_process','=',True)], 'required': [('product_type','=','product')]}" />
				<field name="pricelist_id" options="{'no_create': True}" 
					attrs="{'invisible': ['|', '|', '|', ('pre_process','=',True), ('force_create_product','=',False), ('product_type','!=','product'), ('product_options','!=','sale')]}" />
				<field name="partner_account_id" options="{'no_create': True}" 
					attrs="{'invisible': [('pre_process','=',True)]}" />
				<label for="auto_validate_invoice" style="min-width: 220px;" attrs="{'invisible': [('pre_process','=',True)]}" />
				<field name="auto_validate_invoice" nolabel="1"
					attrs="{'invisible': [('pre_process','=',True)]}" />
				<field name="no_create_lines"
					attrs="{'invisible': [('pre_process','=',True)]}" />
				<field name="product_service_id"
					domain="[('type','=','service')]"
					attrs="{'invisible': ['|', ('no_create_lines','=',False), ('pre_process','=',True)], 'required': [('no_create_lines','=',True)]}"
					options="{'no_create': True}" />
				<field name="account_id" options="{'no_create': True}"
					attrs="{'invisible': [('pre_process','=',True)], 'required': [('pre_process','=',False)]}" />
				<field name="account_analytic_id"
					attrs="{'invisible': [('pre_process','=',True)]}"
					options="{'no_create': True}"
					groups="analytic.group_analytic_accounting" />
			</xpath>
		</field>
	</record>

</odoo>