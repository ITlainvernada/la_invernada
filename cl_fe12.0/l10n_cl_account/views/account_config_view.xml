<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="account_config_settings_form_view" model="ir.ui.view">
		<field name="name">account.config.settings.form</field>
		<field name="model">res.config.settings</field>
		<field name="inherit_id" ref="l10n_cl_fe.res_config_settings_view_form" />
		<field name="arch" type="xml">
			<xpath expr="//field[@name='auto_send_email']/../../.."
				position="after">
				<h2>Importacion XML DTE</h2>
				<div class="row mt16 o_settings_container" id="default_values_dte">
					<div class="col-12 col-md-6 o_setting_box">
						<div class="o_setting_left_pane">
						</div>
						<div class="o_setting_right_pane">
							<h4>Valores por Defecto</h4>
							<div class="text-muted">
								Valores usados en la importacion de archivos xml
								DTE
							</div>
							<div class="content-group">
							</div>
							<div class="row">
								<label for="default_product_type" class="col-md-4 o_light_label" />
								<field name="default_product_type" widget="radio" class="o_light_label" />
							</div>
							<div class="row">
								<label for="default_product_options" class="col-md-4 o_light_label" />
								<field name="default_product_options" widget="radio"
									class="o_light_label" />
							</div>
							<div class="row">
								<label for="default_auto_validate_invoice" class="col-md-4 o_light_label" />
								<field name="default_auto_validate_invoice" class="o_light_label" />
							</div>
							<div class="row">
								<label for="default_no_create_lines" class="col-md-4 o_light_label" />
								<field name="default_no_create_lines" class="o_light_label" />
							</div>
							<div class="row">
								<label for="default_product_service_id" class="col-md-4 o_light_label"
									attrs="{'invisible': [('default_no_create_lines','=',False)]}" />
								<field name="default_product_service_id" class="o_light_label"
									domain="[('type','=','service')]" options="{'no_quick_create': True, 'no_open': True}"
									attrs="{'invisible': [('default_no_create_lines','=',False)], 'required': [('default_no_create_lines','=',True)]}" />
							</div>
							<div class="row">
								<label for="default_account_id" class="col-md-4 o_light_label" />
								<field name="default_account_id" class="o_light_label"
									options="{'no_quick_create': True, 'no_open': True}" />
							</div>
							<div class="row">
								<label for="default_account_analytic_id" class="col-md-4 o_light_label"
									groups="analytic.group_analytic_accounting" />
								<field name="default_account_analytic_id" class="o_light_label"
									options="{'no_quick_create': True, 'no_open': True}" groups="analytic.group_analytic_accounting" />
							</div>
						</div>
					</div>
				</div>
			</xpath>
		</field>
	</record>

</odoo>