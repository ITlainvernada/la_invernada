<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="pos_config_form_view" model="ir.ui.view">
		<field name="name">pos.config.form</field>
		<field name="model">pos.config</field>
		<field name="inherit_id" ref="point_of_sale.pos_config_view_form" />
		<field name="arch" type="xml">
			<xpath expr="//label[@for='cash_control']/.." position="after">
				<div id="enable_cash_in_out" class="o_setting_box"
					attrs="{'invisible': [('cash_control', '=', False)]}">
					<div class="o_setting_left_pane">
						<field name="enable_cash_in_out" />
					</div>
					<div class="o_setting_right_pane">
						<label for="enable_cash_in_out" />
						<span class="fa fa-usd"
							title="Habilitar Ingresar/Sacar Dinero de caja desde el TPV"
							aria-label="Habilitar Ingresar/Sacar Dinero de caja desde el TPV" />
						<div class="text-muted">
							Marque el check si desea poder Ingresar/Sacar
							dinero de Caja desde el TPV
						</div>
						<div class="content-group mt16"
							attrs="{'invisible': [('enable_cash_in_out', '=', False)]}">
							<div>
								<field name="enable_cash_in_out_receipt" class="oe_inline" />
								<span class="oe_inline">
									<b>
										<label for="enable_cash_in_out_receipt" string="Imprimir Comprobante?" />
									</b>
								</span>
								<div class="text-muted">
									Marque el check si desea Imprimir un comprobante
									cuando se ingrese o saque dinero de la caja
								</div>
							</div>
						</div>
					</div>
				</div>
			</xpath>
		</field>
	</record>
</odoo>