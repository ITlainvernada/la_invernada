<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record model="ir.ui.view" id="ace_view_pos_config_form">
		<field name="name">pos.config.form.view.inherit</field>
		<field name="model">pos.config</field>
		<field name="inherit_id" ref="point_of_sale.pos_config_view_form" />
		<field name="arch" type="xml">
			<div id="iface_invoicing" position="after">
				<div class="col-12 col-md-6 o_setting_box" id="sale_order_operations">
					<div class="o_setting_right_pane">
						<span class="o_form_label">Sale order operations</span>
						<div class="text-muted">
							Create Sale Order from POS
						</div>
						<div class="content-group mt16">
							<field name="sale_order_operations" class="o_light_label"
								widget="radio" />
						</div>
					</div>
				</div>
			</div>
		</field>
	</record>
</odoo>