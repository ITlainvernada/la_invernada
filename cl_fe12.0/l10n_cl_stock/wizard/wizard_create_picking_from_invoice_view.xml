<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="wizard_create_picking_from_invoice_form_view"
		model="ir.ui.view">
		<field name="name">wizard.create.picking.from.invoice.form</field>
		<field name="model">wizard.create.picking.from.invoice</field>
		<field name="arch" type="xml">
			<form>
				<group>
					<field name="use_documents" widget="boolean_toggle" />
					<field name="invoice_id" invisible="1" />
				</group>
				<separator string="Informacion de entrega" colspan="2"
					attrs="{'invisible':[('use_documents', '=', False)]}" />
				<group attrs="{'invisible':[('use_documents', '=', False)]}">
					<field name="partner_id"
						attrs="{'required':[('use_documents', '=', True)]}" />
					<field name="contact_id" />
					<field name="transport_type"
						attrs="{'required':[('use_documents', '=', True)]}" />
					<field name="move_reason"
						attrs="{'required':[('use_documents', '=', True)]}" />
				</group>
				<group attrs="{'invisible':[('use_documents', '=', False)]}">
					<field name="vehicle"
						attrs="{'required':[('transport_type','=', '2'), ('use_documents', '=', True)], 'invisible':[('transport_type','!=','2')]}" />
					<field name="chofer"
						attrs="{'required':[('transport_type','=', '2'), ('use_documents', '=', True)], 'invisible':[('transport_type','!=','2')]}" />
					<field name="patente"
						attrs="{'required':[('transport_type','in', ['2']), ('use_documents', '=', True)]}" />
				</group>
				<footer>
					<div class="oe_left">
						<button string="Procesar" name="action_process"
							type="object" class="oe_highlight" />
						<button string="Cerrar" special="cancel" type="object"
							class="oe_link" />
					</div>
				</footer>
			</form>
		</field>
	</record>
</odoo>