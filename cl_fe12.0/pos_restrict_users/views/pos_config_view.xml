<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="pos_config_form_view" model="ir.ui.view">
		<field name="name">POS Configuration</field>
		<field name="model">pos.config</field>
		<field name="inherit_id" ref="point_of_sale.pos_config_view_form" />
		<field name="arch" type="xml">
			<xpath expr="//div[@id='receipt']" position="after">
				<h2>Vendedores</h2>
				<div class="row mt16 o_settings_container" id="users">
					<div id="user_ids" class="col-xs-12 col-md-6 o_setting_box">
						<div class="o_setting_right_pane">
							<label for="user_ids" string="Vendedores"/>
							<div class="text-muted">
								Usuarios que podran usar el POS
							</div>
							<div class="content-group mt16">
								<field name="user_ids" options="{'no_create': True}"
									nolabel="1" widget="many2many_tags" />
							</div>
						</div>
					</div>
				</div>
			</xpath>
		</field>
	</record>
</odoo>