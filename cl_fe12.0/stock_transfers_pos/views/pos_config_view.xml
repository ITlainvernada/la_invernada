<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="pos_config_form_view" model="ir.ui.view">
		<field name="name">POS Configuration</field>
		<field name="model">pos.config</field>
		<field name="inherit_id" ref="point_of_sale.pos_config_view_form" />
		<field name="arch" type="xml">
			<xpath expr="//div[@id='inventory_location']" position="inside">
				<div class="col-12 col-md-6 o_setting_box">
					<div class="o_setting_right_pane">
						<span class="o_form_label">Transferencias Internas</span>
						<div class="text-muted">
							Opciones para generar/recibir transferencias internas
						</div>
						<div class="content-group">
							<div class="row mt16">
								<label for='allow_sent_internal_transfers' string="Generar?" class="col-5 o_light_label" />
								<field name='allow_sent_internal_transfers' />
							</div>
							<div class="row mt16">
								<label for='allow_received_internal_transfers' string="Recibir?" class="col-5 o_light_label" />
								<field name='allow_received_internal_transfers' />
							</div>
						</div>
					</div>
				</div>
			</xpath>
		</field>
	</record>
</odoo>