<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="purchase_discount_order_line_form2">
        <field name="name">purchase_discount.order</field>
        <field name="model">purchase.order.line</field>
        <field name="inherit_id" ref="purchase_discount.purchase_discount_order_line_form2"/>
        <field name="arch" type="xml">
            <field name="price_unit" position="after">
                <field name="discount"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="purchase_discount_order_line_tree">
        <field name="name">purchase_discount.order</field>
        <field name="model">purchase.order.line</field>
        <field name="inherit_id" ref="purchase_discount.purchase_discount_order_line_tree"/>
        <field name="arch" type="xml">
            <field name="price_unit" position="after">
                <field name="discount"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="purchase_discount_order_form_line_tree">
        <field name="name">purchase.discount.order.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase_discount.purchase_discount_order_form_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree/field[@name='taxes_id']" position="before">
                <field name="multi_discount"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/form//field[@name='taxes_id']" position="before">
                <field name="multi_discount"/>
            </xpath>
            <field name="date_order" position="after">
                <field name="print_discount" groups="sale.group_discount_per_so_line"/>
                <field name="print_discount_amount" attrs="{'invisible': [('print_discount','=',False)]}" groups="sale.group_discount_per_so_line"/>
            </field>
        </field>
    </record>

</odoo>
