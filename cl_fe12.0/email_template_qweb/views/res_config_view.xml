<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="res_config_settings_form_view" model="ir.ui.view">
		<field name="name">res.config.settings.form</field>
		<field name="model">res.config.settings</field>
		<field name="inherit_id"
			ref="mail.res_config_settings_view_form" />
		<field name="arch" type="xml">
			<div id="emails" position="inside">
				<div class="col-12 col-lg-6 o_setting_box">
					<div class="o_setting_left_pane" />
					<div class="o_setting_right_pane">
						<span class="o_form_label">Default Notify Layout</span>
						<div class="text-muted">
							Configure layout for emails templates
						</div>
						<div class="content-group">
							<div class="mt16">
								<field name="mail_layout_view_id"
									options="{'no_create': True}" />
								<field name="force_notify_layout"
									attrs="{'invisible': [('mail_layout_view_id', '=', False)]}" />
							</div>
						</div>
					</div>
				</div>
			</div>
		</field>
	</record>
</odoo>