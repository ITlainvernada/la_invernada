<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record model="ir.ui.view" id="res_groups_rol_tree_view">
		<field name="name">res.groups.rol.tree</field>
		<field name="model">res.groups.rol</field>
		<field name="arch" type="xml">
			<tree string="Roles de Usuarios">
				<field name="name" />
			</tree>
		</field>
	</record>

	<record model="ir.ui.view" id="res_groups_rol_form_view">
		<field name="name">res.groups.rol.form</field>
		<field name="model">res.groups.rol</field>
		<field name="arch" type="xml">
			<form string="Roles de Usuarios">
				<sheet>
					<group>
						<field name="name" />
					</group>
					<notebook>
						<page string="Grupos">
							<field name="groups_ids" options="{'no_create': True}"
								required="1" />
						</page>
						<page string="Usuarios">
							<field name="users_ids" readonly="1" options="{'no_create': True}" />
						</page>
					</notebook>
				</sheet>
			</form>
		</field>
	</record>

	<record model="ir.ui.view" id="res_groups_rol_search_view">
		<field name="name">res.groups.rol.search</field>
		<field name="model">res.groups.rol</field>
		<field name="arch" type="xml">
			<search string="Roles de Usuarios">
				<field name="name" />
			</search>
		</field>
	</record>

	<record model="ir.actions.act_window" id="action_res_groups_rol_tree_view">
		<field name="name">Roles de Usuarios</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">res.groups.rol</field>
		<field name="view_type">form</field>
		<field name="view_mode">tree,form</field>
		<field name="view_id" ref="res_groups_rol_tree_view" />
		<field name="search_view_id" ref="res_groups_rol_search_view" />
	</record>

	<menuitem id="res_groups_rol_menu" name="Roles de Usuarios"
		sequence="5" parent="base.menu_users" action="action_res_groups_rol_tree_view" />

</odoo>