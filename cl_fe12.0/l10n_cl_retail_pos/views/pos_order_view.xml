<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="pos_order_form_view" model="ir.ui.view">
		<field name="name">POS Order form</field>
		<field name="model">pos.order</field>
		<field name="inherit_id" ref="point_of_sale.view_pos_pos_form" />
		<field name="arch" type="xml">
			<xpath expr="//button[@name='action_pos_order_invoice']"
				position="before">
				<button name="action_force_timbre" string="Timbrar documento"
						type="object" groups="base.group_system"
						confirm="Esta seguro de volver a timbrar este documento?"
						attrs="{'invisible': ['|', '|', ('state','in',('cancel', 'invoiced')), ('statement_ids','=',[]), ('sii_document_number', '&lt;=', 0.0)]}" />
			</xpath>
			<xpath expr="//field[@name='statement_ids']" position="attributes">
				<attribute name="readonly">1</attribute>
			</xpath>
		</field>
	</record>

</odoo>