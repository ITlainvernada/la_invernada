<?xml version="1.0" encoding="UTF-8"?>
<odoo>

	<record model="ir.ui.view" id="wizard_kardex_individual_form_view">
		<field name="name">wizard.kardex.individual.report.form</field>
		<field name="model">wizard.kardex.individual.report</field>
		<field name="arch" type="xml">
			<form string="Kardex Individual por producto">
				<group>
					<group>
						<field name="product_id" required="1" options="{'no_create': True}"
							domain="[('type','!=','service')]" />
						<field name="date_from" />
					</group>
					<group>
						<field name="location_id" required="1" options="{'no_create': True}" />
						<field name="date_to" />
					</group>
				</group>
				<footer>
					<div class="oe_left">
						<button string="Generar reporte" name="action_print_report"
							type="object" class="oe_highlight fa fa-file-pdf-o" />
						<button string="Cerrar" special="cancel" type="object"
							class="oe_link" />
					</div>
				</footer>
			</form>
		</field>
	</record>

	<record model="ir.actions.act_window" id="action_wizard_kardex_individual_tree_view">
		<field name="name">Kardex Individual por producto</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">wizard.kardex.individual.report</field>
		<field name="view_type">form</field>
		<field name="view_mode">tree,form</field>
		<field name="view_id" ref="wizard_kardex_individual_form_view" />
		<field name="target">new</field>
	</record>

	<menuitem id="wizard_kardex_individual_menu" name="Kardex Individual por producto"
		sequence="10" parent="stock.menu_warehouse_report" 
		groups="generic_stock.group_stock_report" action="action_wizard_kardex_individual_tree_view" />

</odoo>