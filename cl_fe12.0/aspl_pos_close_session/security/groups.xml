<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data noupdate="1">
		<!-- grupo para ver los valores en el cierre de session -->
		<record id="group_pos_see_cash_values" model="res.groups" forcecreate="True">
			<field name="name">Ver Valores en arqueo de caja</field>
			<field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]" />
			<field name="implied_ids" eval="[(4, ref('point_of_sale.group_pos_user'))]" />
			<field name="category_id" ref="generic_pos.module_category_point_of_sale" />
		</record>
		
		<record id="po_deposit_multi_company_rule" model="ir.rule">
	        <field name="name">Depositos Multi Company</field>
	        <field name="model_id" ref="model_pos_deposit"/>
	        <field name="global" eval="True"/>
	        <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
	    </record>

	</data>
	
</odoo>