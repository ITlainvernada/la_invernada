<?xml version="1.0" encoding="UTF-8"?>

<templates id="template" xml:space="preserve">

        <t t-name="ConfirmCloseSessionPopupWizard">
            <div class="modal-dialog">
                <div class="popup popup-textinput confirm-close-session" style="height: 203px; width: 35%">
                    <p class="title">Confirmation</p>
                    Do you want to close the session?
                    <div class="footer">
                        <div class="button confirm">
                            POS Close
                        </div>
                        <div class="button close_session" id="close_session">
                            POS Session Close
                        </div>
                        <t t-if="widget.pos.config.cash_control">
	                        <div class="button cash_deposit" id="cash_deposit">
	                            Crear Deposito
	                        </div>
	                    </t>
                        <div class="button cancel">
                            Cancel
                        </div>
                    </div>
                </div>
            </div>
        </t>
        
        <t t-name="CreateDepositPopupWidget">
	        <div class="modal-dialog">
	            <div class="popup popup-textinput cash_deposit_popup" style="height: 480px;">
	                <p class="title"><t t-esc="widget.options.title" /></p>
	                <div class='container pos-popup-box'>
						<div class='pos-row'>
							<span class='popup-label' for="journal_dest_id">Cuenta Bancaria:</span>
							<select id='journal_dest_id' class="detail-edit detail-required">
	                            <option value="">Seleccione la Cuenta bancaria </option>
	                            <t t-foreach="widget.pos.bank_journals || []" t-as="acc_journal">
	                                <option t-att-value='acc_journal.id'> 
	                                    <t t-esc='acc_journal.name'/>
	                                </option>
	                            </t>
	                        </select>
						</div>
						<div class='pos-row'>
							<span class='popup-label' for="deposit_date">Fecha de Deposito:</span>
							<input type="text" id="deposit_date" class="datetime detail-edit detail-required" placeholder="YYYY/MM/DD" autocomplete="off" />
						</div>
						<div class='pos-row'>
							<span class='popup-label' for="papeleta_number">Numero de Papeleta:</span>
							<input type="text" id="papeleta_number" class="detail-edit detail-required" autocomplete="off" />
						</div>
						<div class='pos-row'>
							<span class='popup-label' for="amount_cash">Efectivo a Depositar:</span>
							<input type="text" id="amount_cash" class="detail-edit detail-required" autocomplete="off" />
						</div>
	                </div>
	                <div class="footer">
	                    <div class="button confirm highlight">
	                        Crear Deposito
	                    </div>
	                    <div class="button cancel">
	                        Cancel
	                    </div>
	                </div>
	            </div>
	        </div>
	    </t>

        <t t-name="CashControlWizardPopup">
            <div class="modal-dialog">
                <div class="popup popup-cashcontrol-structure">
                    <p class="title"><t t-esc="widget.title" /></p>
                    <div style="max-height: 55% !important;overflow: auto;padding-right: 20px;">
                        <table id="cashbox_data_table">
                            <thead>
                                <tr>
                                    <th>Coin/Bill Value</th>
                                    <th>Number of Coins/Bills</th>
                                    <th>Subtotal</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                        <div id="add_close_balance" style="width:100%;">
                            <div style="position: fixed;top: 60%;float:left">
                                <button id="add_new_item">Add New Item</button>
                            </div>
                            <div style="position: fixed;top: 58%;float:right;margin-left:30%;">
                                <h5>Subtotal :<span class="subtotal_end" style="margin-left: 10px;"></span></h5>
                            </div>
                        </div>
                    </div>
                    <br/>
                    <div id="cash_details" style="position:fixed; top:50%;width:50%;">
                        <table width="100%" t-attf-style="display:#{widget.pos.get_cashier().has_group_see_cash_values ? 'table' : 'none'}">
                            <tr align="right">
                                <td width="30%"><label>Opening Balance: </label></td>
                                <td width="20%"><span id="open_bal">0.00</span></td>
                                <td width="30%"><label>Real Closing Balance: </label></td>
                                <td width="20%"><span id="real_close_bal">0.00</span></td>
                            </tr>
                            <tr align="right">
                                <td width="30%"><label>+ Transactions: </label></td>
                                <td width="20%"><span id="transaction">0.00</span></td>
                                <td></td>
                                <td></td>
                            </tr>
                            <tr align="right">
                                <td width="30%"><label>= Theoretical Closing Balance: </label></td>
                                <td width="20%"><span id="theo_close_bal">0.00</span></td>
                                <td></td>
                                <td></td>
                            </tr>
                            <tr style="border-top: 2px solid ! important;" align="right">
                                <td></td>
                                <td></td>
                                <td width="30%"><label>Difference: </label></td>
                                <td width="20%"><span id="differ">0.00</span></td>
                            </tr>
                        </table>
                    </div>
                    <br/>
                    <div class="footer" style="">
                        <div class="button close_session" style="width: 130px;">
                            Close Session
                        </div>
                        <div class="button ok">
                            Validate
                        </div>
                        <div class="button cancel">
                            Cancel
                        </div>
                    </div>
                </div>
            </div>
        </t>

        <t t-name="OpeningBalanceScreenWidget">
            <div class="opening-balance-screen screen">
                 <div class="screen-content">
                    <section class="top-content select-user">
                        <button id="skip">Skip</button>
                        <div class='cash-control-header'>
                            Opening Cash Control
                        </div>
                    </section>
                    <section class="full-content" style="top: 80px;overflow: auto;">
                        <div class='window'>
                            <section class='subwindow'>
                                <div class='subwindow-container'>
                                    <div class='subwindow-container-fix touch-scrollable scrollable-y'>
                                        <div style="max-height: 55% !important;overflow: auto; padding-right: 20px;">
                                            <table id="opening_cash_table">
                                                <thead>
                                                    <tr>
                                                        <th>Coin/Bill Value</th>
                                                        <th>Number of Coins/Bills</th>
                                                        <th>Subtotal</th>
                                                    </tr>
                                                </thead>
                                                <tbody></tbody>
                                            </table>
                                            <div id="open_balance_add" style="width:100%;">
                                                <div style="position: fixed;top: 70%;float:left">
                                                    <button id="add_open_balance">Add New Item</button>
                                                </div>
                                                <div style="position: fixed;top: 70%;float:right;margin-left:45%;">
                                                    <h2>Subtotal :<span class="open_subtotal" style="margin-left: 15px;"></span></h2>
                                                </div>
                                            </div>
                                        </div>
                                        <br/>
                                    </div>
                                </div>
                            </section>
                        </div>
                    </section>
                    <div class="open_footer">
                        <button id="validate_open_balance">Validate Cash</button>
                    </div>
                 </div>
            </div>
        </t>

</templates>