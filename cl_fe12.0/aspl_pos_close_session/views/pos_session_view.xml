<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
	<record id="pos_session_view_inherit_view" model="ir.ui.view">
		<field name="name">pos.session.inherit.view</field>
		<field name="model">pos.session</field>
		<field name="inherit_id"
			ref="point_of_sale.view_pos_session_form" />
		<field name="arch" type="xml">
			<xpath expr="//label[@for='cash_register_total_entry_encoding']" position="attributes">
				<attribute name="groups">aspl_pos_close_session.group_pos_see_cash_values</attribute>
			</xpath>
			<xpath expr="//field[@name='cash_register_total_entry_encoding']" position="attributes">
				<attribute name="groups">aspl_pos_close_session.group_pos_see_cash_values</attribute>
			</xpath>
			<xpath expr="//label[@for='cash_register_balance_end']" position="attributes">
				<attribute name="groups">aspl_pos_close_session.group_pos_see_cash_values</attribute>
			</xpath>
			<xpath expr="//field[@name='cash_register_balance_end']" position="attributes">
				<attribute name="groups">aspl_pos_close_session.group_pos_see_cash_values</attribute>
			</xpath>
			<xpath expr="//field[@name='cash_register_difference']/.." position="attributes">
				<attribute name="groups">aspl_pos_close_session.group_pos_see_cash_values</attribute>
			</xpath>
			<xpath
				expr="//field[@name='statement_ids']/tree//field[@name='total_entry_encoding']"
				position="attributes">
				<attribute name="groups">aspl_pos_close_session.group_pos_see_cash_values</attribute>
			</xpath>
			<xpath
				expr="//field[@name='statement_ids']/tree//field[@name='difference']"
				position="attributes">
				<attribute name="groups">aspl_pos_close_session.group_pos_see_cash_values</attribute>
			</xpath>
			<xpath expr="//button[@name='action_pos_session_validate']" position="after">
				<button name='%(wizard_pos_deposit_action)d' type='action'
					string='Depositar'
					attrs="{'invisible': ['|', ('state','in', ('opening_control', 'closed')), ('cash_control','=', False)]}"
					groups="point_of_sale.group_pos_user" />
			</xpath>
			<xpath
				expr="//field[@name='statement_ids']/tree//field[@name='balance_start']"
				position="after">
				<field name="total_entry_encoding_custom"
					string="Total Ventas" sum="Total Ventas" 
					groups="aspl_pos_close_session.group_pos_see_cash_values" />
				<field name="total_entry_encoding_cn"
					string="Notas de Credito" sum="Notas de Credito"
					groups="aspl_pos_close_session.group_pos_see_cash_values" />
				<field name="total_entry_encoding_put_in"
					string="Ingresos Extras" sum="Ingresos Extras"
					groups="aspl_pos_close_session.group_pos_see_cash_values" />
				<field name="total_entry_encoding_take_out"
					string="Egresos Extras" sum="Egresos Extras"
					groups="aspl_pos_close_session.group_pos_see_cash_values" />
				<field name="total_entry_encoding_deposit"
					string="Depositos" sum="Depositos"
					groups="aspl_pos_close_session.group_pos_see_cash_values" />
				<field name="total_entry_encoding_adjustment"
					string="Ajuste de cierre" sum="Ajuste de cierre"
					groups="aspl_pos_close_session.group_pos_see_cash_values" />
			</xpath>
			<xpath
				expr="//field[@name='statement_ids']/tree//field[@name='state']"
				position="before">
				<field name="payment_count"
					string="# Pagos" sum="# Pagos"
					groups="aspl_pos_close_session.group_pos_see_cash_values" />
			</xpath>
			<field name="statement_ids" position="after">
				<separator colspan="2" string="Control de Efectivo" 
					attrs="{'invisible' : ['|', ('cash_control', '=', False), ('state', '=', 'opening_control')]}" />
				<notebook colspan="2" attrs="{'invisible' : [('cash_control', '=', False)]}" >
					<page string="Resumen de Pagos" attrs="{'invisible' : ['|', ('cash_control', '=', False), ('state', '=', 'opening_control')]}"
						groups="aspl_pos_close_session.group_pos_see_cash_values">
						<field name="payment_resume_ids">
							<tree>
								<field name="credit_card_provider_id" />
								<field name="amount_total" sum="Monto Total" />
								<field name="payment_count" sum="Cantidad Pagos"/>
							</tree>
							<form>
								<group>
									<group>
										<field name="credit_card_provider_id" />
									</group>
									<group>
										<field name="amount_total" />
										<field name="payment_count" />
									</group>
								</group>
							</form>
						</field>
					</page>
					<page string="Apertura" 
						attrs="{'invisible' : ['|', ('cash_control', '=', False), ('state', '=', 'opening_control')]}" >
						<field name="cash_control_start_ids">
							<tree>
								<field name="coin_value" />
								<field name="number" />
								<field name="subtotal" sum="Total"/>
							</tree>
						</field>
					</page>
					<page string="Cierre" attrs="{'invisible' : ['|', ('cash_control', '=', False), ('state', '!=', 'closed')]}" >
						<field name="cash_control_end_ids">
							<tree>
								<field name="coin_value" />
								<field name="number" />
								<field name="subtotal" sum="Total"/>
							</tree>
						</field>
					</page>
				</notebook>
			</field>
		</field>
	</record>
	
	<record id="pos_session_no_deposited_action" model="ir.actions.act_window">
		<field name="name">Sesiones Sin Deposito</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">pos.session</field>
		<field name="domain">[('cash_register_id', '!=', False), ('pos_deposit_ids','=', False)]</field>
		<field name="view_type">form</field>
		<field name="view_mode">tree,form</field>
		<field name="view_id" ref="point_of_sale.view_pos_session_tree" />
		<field name="search_view_id" ref="point_of_sale.view_pos_session_search" />
	</record>

	<menuitem id="pos_session_no_deposited_menu" name="Sesiones Sin Deposito"
		sequence="27" parent="account.account_reports_management_menu"
		action="pos_session_no_deposited_action" />

</odoo>