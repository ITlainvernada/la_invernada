<?xml version="1.0" encoding="UTF-8"?>
<odoo noupdate="1">
	
	<record id="group_purchase_discount_value" model="res.groups"
		forcecreate="True">
		<field name="name">Descuento en Monto</field>
		<field name="users"
			eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]" />
		<field name="implied_ids" eval="[(4, ref('purchase.group_purchase_user'))]" />
		<field name="category_id" ref="module_category_purchase_management" />
	</record>
	
	<!-- grupo para configuraciones y ver informes relativas al propio modulo -->
	<record id="group_purchase_report" model="res.groups"
		forcecreate="True">
		<field name="name">Informes</field>
		<field name="users"
			eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]" />
		<field name="implied_ids" eval="[(4, ref('purchase.group_purchase_user'))]" />
		<field name="category_id" ref="module_category_purchase_management" />
	</record>

	<record id="group_purchase_config" model="res.groups"
		forcecreate="True">
		<field name="name">Configuraciones</field>
		<field name="users"
			eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]" />
		<field name="implied_ids" eval="[(4, ref('purchase.group_purchase_manager'))]" />
		<field name="category_id" ref="module_category_purchase_management" />
	</record>

</odoo>