<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-extend="Product">
    	<t t-jquery=".price-tag:eq(0)" t-operation="prepend">
    		<t t-set="product_price" t-value="product.get_price(pricelist, 1)" />
    		<div style="background:red;" t-if="product.lst_price != product_price">
                 <del>
                     <div t-esc="widget.format_currency(product.lst_price,'Product Price')"/>
                 </del>
             </div>
		</t>
		<t t-jquery=".price-tag:eq(1)" t-operation="prepend">
    		<t t-set="product_price" t-value="product.get_price(pricelist, 1)" />
             <div style="background:red;" t-if="product.lst_price != product_price">
                <del>
                    <div t-esc="widget.format_currency(product.lst_price,'Product Price')+'/'+widget.pos.units_by_id[product.uom_id[0]].name" style="background-color:red;"/>
                </del>
            </div>
		</t>
    </t>
    
</templates>