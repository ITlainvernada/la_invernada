<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="group_internal_transfer_user" model="res.groups">
			<field name="name">Solicitador</field>
			<field name="category_id"
				ref="module_category_transfer_requisition" />
			<field name="menu_access"
				eval="[(6,0,[ref('stock.menu_stock_root'),
						   		])]"></field>
		</record>
	
		<record id="group_transfer_approved" model="res.groups">
			<field name="name">Aprobador</field>
			<field name="category_id"
				ref="module_category_transfer_requisition" />
			<field name="users" eval="[(4, ref('base.user_root'))]" />
			<field name="implied_ids"
				eval="[(4, ref('group_internal_transfer_user'))]" />
			<field name="menu_access"
				eval="[(6,0,[ref('stock.menu_stock_root'),
						   		])]"></field>
		</record>
	
		<record id="group_transfer_admin" model="res.groups">
			<field name="name">Administrador</field>
			<field name="category_id"
				ref="module_category_transfer_requisition" />
			<field name="users"
				eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]" />
			<field name="implied_ids"
				eval="[(4, ref('group_transfer_approved'))]" />
			<field name="menu_access"
				eval="[(6,0,[ref('stock.menu_stock_root'),
						   		])]"></field>
		</record>
	</data>
	
	<data noupdate="1">	
		<record id="transfers_multi_company_rule" model="ir.rule">
	        <field name="name">Transferencias Multi Company</field>
	        <field name="model_id" ref="model_transfer_requisition"/>
	        <field name="global" eval="True"/>
	        <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
	    </record>
	    
	    <record id="transfers_analisis_multi_company_rule" model="ir.rule">
	        <field name="name">Analisis de Transferencias Multi Company</field>
	        <field name="model_id" ref="model_transfer_requisition_analisis"/>
	        <field name="global" eval="True"/>
	        <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
	    </record>
	</data>
</odoo>