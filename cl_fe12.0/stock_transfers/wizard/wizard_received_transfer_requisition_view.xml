<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record model="ir.ui.view"
		id="wizard_received_transfer_requisition_line_tree_view">
		<field name="name">wizard.received.transfer.requisition.line.tree
		</field>
		<field name="model">wizard.received.transfer.requisition.line</field>
		<field name="arch" type="xml">
			<tree string="Productos a recibir por transferencia"
				colors="blue:process_type=='diff'" editable="bottom" create="false"
				delete="false">
				<field name="product_id" readonly="1" />
				<field name="qty_process" readonly="1" />
				<field name="qty_received" readonly="1" />
				<field name="qty_diff" readonly="1" />
				<field name="note"
					attrs="{'readonly': [('process_type','!=','diff')], 'required': [('process_type','=','diff')]}" />
				<field name="process_mode"
					attrs="{'readonly': ['|',('process_type','!=','diff'),('qty_diff','&gt;',0)], 'required': [('process_type','=','diff'),('qty_diff','&lt;',0)]}" />
				<field name="line_id" invisible="1" />
				<field name="process_type" invisible="1" />
			</tree>
		</field>
	</record>

	<record model="ir.ui.view"
		id="wizard_received_transfer_requisition_line_form_view">
		<field name="name">wizard.received.transfer.requisition.line.form
		</field>
		<field name="model">wizard.received.transfer.requisition.line</field>
		<field name="arch" type="xml">
			<form string="Productos a recibir por transferencia">
				<group col="4" colspan="2">
					<field name="product_id" readonly="1" />
					<field name="qty_process" readonly="1" />
					<field name="qty_received" readonly="1" />
					<field name="qty_diff" readonly="1" />
					<field name="note"
						attrs="{'readonly': [('process_type','!=','diff')], 'required': [('process_type','=','diff')]}" />
					<field name="process_mode"
						attrs="{'readonly': ['|',('process_type','!=','diff'),('qty_diff','&gt;',0)], 'required': [('process_type','=','diff'),('qty_diff','&lt;',0)]}" />
					<field name="line_id" invisible="1" />
					<field name="process_type" invisible="1" />
				</group>
			</form>
		</field>
	</record>

	<record model="ir.ui.view"
		id="wizard_received_transfer_requisition_form_view">
		<field name="name">wizard.received.transfer.requisition.form</field>
		<field name="model">wizard.received.transfer.requisition</field>
		<field name="arch" type="xml">
			<form string="Recibir productos de transferencia">
				<group colspan="2" col="4" width="600">
					<h3 colspan="4">Hay diferencias entre lo solicitado y lo Recibido
					</h3>
					<h3 colspan="4">Por favor indique las Razones</h3>
					<separator string="Lineas a Revisar" colspan="4" />
					<field name="line_diff_ids" colspan="4" nolabel="1" />
					<separator string="Recibidas completamente" colspan="4" />
					<field name="line_normal_ids" readonly="1" colspan="4"
						nolabel="1">
						<tree string="Productos a recibir">
							<field name="product_id" />
							<field name="qty_process" />
							<field name="qty_received" />
						</tree>
						<form string="Productos a recibir">
							<group col="4" colspan="2">
								<field name="product_id" />
								<field name="qty_process" />
								<field name="qty_received" />
							</group>
						</form>
					</field>
				</group>
				<footer>
					<div class="oe_left">
						<button name="action_process" string="Recibir"
							type="object" class="oe_highlight" />
						<button string="Cerrar" special="cancel" type="object"
							class="oe_link" />
					</div>
				</footer>
			</form>
		</field>
	</record>

	<record model="ir.actions.act_window"
		id="action_wizard_received_transfer_requisition_form_view">
		<field name="name">Recibir productos de transferencia</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">wizard.received.transfer.requisition</field>
		<field name="view_type">form</field>
		<field name="view_mode">form</field>
		<field name="view_id"
			ref="wizard_received_transfer_requisition_form_view" />
		<field name="target">new</field>
	</record>
</odoo>