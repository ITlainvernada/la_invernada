<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="report_transfer_requisition_list">
		<t t-set="report_title"
			t-value="'Analisis de Transferencias %s' % dates_string"></t>
		<t t-call="report.html_container">
			<t t-call="ecua_utilidades.internal_layout">
				<div class="page" style="font-size: 10px;">
					<table id="header_row"
						class="table table-condensed table-bordered">
						<thead>
							<tr>
								<th id="name_title">
									<strong>Solicitud</strong>
								</th>
								<th id="shop_title">
									<strong>Almacen</strong>
								</th>
								<th id="location_title">
									<strong>Bodega Origen</strong>
								</th>
								<th id="location_dest_title">
									<strong>Bodega Destino</strong>
								</th>
								<th id="default_code_title">
									<strong>Codigo</strong>
								</th>
								<th id="product_title">
									<strong>Producto</strong>
								</th>
								<th id="product_qty_title" class="text-center">
									<strong>Solicitado</strong>
								</th>
								<th id="qty_process_title" class="text-center">
									<strong>Aprobado</strong>
								</th>
								<th id="qty_received_title" class="text-center">
									<strong>Recibido</strong>
								</th>
								<th id="uom_title" class="text-right"
									groups="uom.group_uom">
									<strong>UdM</strong>
								</th>
								<th id="price_unit_title" class="text-right">
									<strong>Precio Unitario</strong>
								</th>
								<th id="requisition_uid_title">
									<strong>Solicitado por</strong>
								</th>
								<th id="process_date_title">
									<strong>Fecha de Proceso</strong>
								</th>
								<th id="approved_uid_title">
									<strong>Aprobado por</strong>
								</th>
								<th id="approved_date_title">
									<strong>Fecha de Aprobaci√≥n</strong>
								</th>
								<th id="received_uid_title">
									<strong>Recibido por</strong>
								</th>
								<th id="received_date_title">
									<strong>Fecha de Recepcion</strong>
								</th>
							</tr>
						</thead>
						<tbody>
							<tr t-foreach="report_lines" t-as="line">
								<td id="name_value" class="text-left">
									<span t-esc="line['name']"></span>
								</td>
								<td id="shop_value" class="text-left">
									<span t-esc="line['shop']"></span>
								</td>
								<td id="location_value" class="text-left">
									<span t-esc="line['location']"></span>
								</td>
								<td id="location_dest_value" class="text-left">
									<span t-esc="line['location_dest']"></span>
								</td>
								<td id="default_code_value" class="text-left">
									<span t-esc="line['default_code']"></span>
								</td>
								<td id="product_value" class="text-left">
									<span t-esc="line['product']"></span>
								</td>
								<td id="product_qty_value" class="text-right">
									<span
										t-esc="formatLang(line['product_qty'], dp='Product Unit of Measure')" />
								</td>
								<td id="qty_process_value" class="text-right">
									<t t-if="line['state'] in ('approved', 'process', 'done')">
										<span
											t-esc="formatLang(line['qty_process'], dp='Product Unit of Measure')" />
									</t>
								</td>
								<td id="qty_received_value" class="text-right">
									<t t-if="line['state'] in ('process', 'done')">
										<span
											t-esc="formatLang(line['qty_received'], dp='Product Unit of Measure')" />
									</t>
								</td>
								<td id="uom_value" class="text-right"
									groups="uom.group_uom">
									<span t-esc="line['uom']" />
								</td>
								<td id="price_unit_value" class="text-right">
									<span
										t-esc="formatLang(line['price_unit'], dp='Product Price')" />
								</td>
								<td id="requisition_uid_value" class="text-left">
									<span t-esc="line['requisition_uid']"></span>
								</td>
								<td id="process_date_value" class="text-left">
									<span
										t-esc="line['process_date'] and formatLang(line['process_date'], date_time=True) or ''"></span>
								</td>
								<td id="approved_uid_value" class="text-left">
									<span t-esc="line['approved_uid']"></span>
								</td>
								<td id="approved_date_value" class="text-left">
									<span
										t-esc="line['approved_date'] and formatLang(line['approved_date'], date_time=True) or ''"></span>
								</td>
								<td id="received_uid_value" class="text-left">
									<span t-esc="line['received_uid']"></span>
								</td>
								<td id="received_date_value" class="text-left">
									<span
										t-esc="line['received_date'] and formatLang(line['received_date'], date_time=True) or ''"></span>
								</td>
							</tr>
						</tbody>
					</table>
				</div>
			</t>
		</t>
	</template>
</odoo>