<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record model="ir.ui.view" id="dusal_view_order_form">
			<field name="name">dusal.sale.order.form</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_order_form" />
			<field name="arch" type="xml">
				<data>
					<xpath expr="//field[@name='payment_term_id']" position="after">
						<field name="print_line_number" />
						<field name="print_product_image" />
						<field name="image_size" attrs="{'invisible': [('print_product_image', '=', False)]}" />
					</xpath>
					<xpath
						expr="//field[@name='order_line']/form[1]/group/group/field[@name='product_id']"
						position="after">
						<field name="product_image" widget="image" options="{'size': [90, 90]}"
							id="product_image" />
					</xpath>
					<xpath expr="//field[@name='order_line']/tree[1]/field[@name='name']"
						position="after">
						<field name="product_image" widget="image" id="product_image"
							options="{'size': [90, 90]}" readonly="1" />
					</xpath>
				</data>
			</field>
		</record>
	</data>
</odoo>
