<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="wizard_create_dte_picking_form_view"
		model="ir.ui.view">
		<field name="name">wizard.create.dte.picking.form</field>
		<field name="model">wizard.create.dte.picking</field>
		<field name="arch" type="xml">
			<form>
				<separator string="Informacion de entrega" colspan="2" />
				<div class="oe_grey">
					Por favor seleccione la informacion adecuada para
					poder crear la Guia de Despacho
				</div>
				<group>
					<field name="picking_id" invisible="1" />
					<field name="partner_id" required="1" readonly="1"
						force_save="1" options="{'no_create': True}" />
					<field name="contact_id" options="{'no_create': True}" />
					<field name="transport_type" required="1" />
					<field name="move_reason" required="1" />
				</group>
				<group>
					<field name="carrier_id" options="{'no_create': True}"
						attrs="{'required':[('transport_type','=', '3')], 'invisible':[('transport_type','!=','3')]}" />
					<field name="vehicle" options="{'no_create': True}"
						attrs="{'required':[('transport_type','=', '2')], 'invisible':[('transport_type','!=','2')]}" />
					<field name="chofer" options="{'no_create': True}"
						attrs="{'required':[('transport_type','=', '2')], 'invisible':[('transport_type','!=','2')]}" />
					<field name="patente"
						attrs="{'required':[('transport_type','in', ['2'])]}" />
				</group>
				<footer>
					<div class="oe_left">
						<button string="Crear Guia" name="action_process"
							type="object" class="oe_highlight"
							confirm="Esta seguro de crear la Guia de despacho con los datos indicados?" />
						<button string="Cerrar" special="cancel" type="object"
							class="oe_link" />
					</div>
				</footer>
			</form>
		</field>
	</record>

	<record id="wizard_create_dte_picking_action"
		model="ir.actions.act_window">
		<field name="name">Crear Guia de Despacho electronica</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">wizard.create.dte.picking</field>
		<field name="view_type">form</field>
		<field name="view_mode">tree,form</field>
		<field name="view_id" ref="wizard_create_dte_picking_form_view" />
		<field name="target">new</field>
	</record>

</odoo>