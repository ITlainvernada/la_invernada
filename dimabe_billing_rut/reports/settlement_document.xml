<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="settlement_document">
        <t t-call="web.html_container">
            <div class="page" style="margin-top:0px;">
                <t t-foreach="docs" t-as="d">
                    <div>
                        En
                        <span t-field="res_company.city"/>
                        a
                        <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d')"/>
                        de
                        <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%B')" t-lang="d.create_uid.lang"/>
                        de
                        <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y')"/>
                        entre
                        <span t-esc="d.contract_id.company_id.name"/>
                        con R.U.T
                        <span t-esc="d.contract_id.company_id.invoice_rut"/>
                        domiciliada en
                        <span t-esc="d.contract_id.company_id.street"/>

                    </div>
                </t>
            </div>
        </t>
    </template>
    <report id="action_settlement" model="custom.settlement" menu="True" string="Finiquito (Documento)"
            report_type="qweb-pdf" name="dimabe_billing_rut.settlement_document"/>
</odoo>