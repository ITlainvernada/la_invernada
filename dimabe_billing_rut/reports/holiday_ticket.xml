<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="holiday_ticket">
        <t t-call="web.html_container">
            <div class="page">
                <t t-foreach="docs" t-as="o">
                    <img t-att-src="'data:image/png;base64,%s' % to_text(o.employee_id.address_id.image)" style="height:75px;margin:0 auto;"/>
                    <h5>
                        <span t-field="o.employee_id.address_id.name"/>
                    </h5>
                </t>
            </div>
        </t>
    </template>
    <report id="action_holiday_ticket" string="Vale de vacaciones" model="hr.leave" report_type="qweb-pdf"
            name="dimabe_billing_rut.holiday_ticket" menu="True"/>
</odoo>