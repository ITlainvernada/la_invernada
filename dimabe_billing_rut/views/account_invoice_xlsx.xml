<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <record id="wizard_export_account_move_xlsx" model="ir.ui.view">
        <field name="name">Libro de Legales</field>
        <field name="model">account.invoice.xlsx</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="book_type" required="1" />
                    <field name="company_get_id" required="1"/>
                    <field name="from_date" required="1"/>
                    <field name="to_date" required="1"/>
                </group>
                <footer>
                    <button type="object" class="oe_highlight" string="Descargar Libro (XLS)" name="generate_purchase_book" attrs="{'invisible': [('book_type', 'not in', ['purchase'])]}" />
                    <button type="object" class="oe_highlight" string="Descargar Libro (PDF)" name="generate_purchase_book_pdf" attrs="{'invisible': [('book_type', 'not in', ['purchase'])]}" />
                    <button type="object" class="oe_highlight" string="Descargar Libro (XLS)" name="generate_honorarios_book" attrs="{'invisible': [('book_type', 'not in', ['employee_fee'])]}"/>
                    <button type="object" class="oe_highlight" string="Descargar Libro (PDF)" name="generate_honorarios_book_pdf" attrs="{'invisible': [('book_type', 'not in', ['employee_fee'])]}" />
                    <button type="object" class="oe_highlight" string="Descargar Libro (XLS)" name="generate_sale_book" attrs="{'invisible': [('book_type', 'not in', ['sale'])]}" />
                    <button type="object" class="oe_highlight" string="Descargar Libro (PDF)" name="generate_sale_book_pdf" attrs="{'invisible': [('book_type', 'not in', ['sale'])]}" />


                    <button type="object" class="oe_highlight" string="Ver Lineas" name="generate_purchase_book_html" attrs="{'invisible': [('book_type', 'not in', ['purchase'])]}" />
                    <button type="object" class="oe_highlight" string="Ver Lineas" name="generate_honorarios_book_html" attrs="{'invisible': [('book_type', 'not in', ['employee_fee'])]}" />
                    <button type="object" class="oe_highlight" string="Ver Lineas" name="generate_sale_book_html" attrs="{'invisible': [('book_type', 'not in', ['sale'])]}" />

                </footer>
            </form>
        </field>
    </record>
    <record id="action_export_account_move_xlsx" model="ir.actions.act_window">
        <field name="name">Libro Legales</field>
		<field name="res_model">account.invoice.xlsx</field>
		<field name="view_type">form</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="wizard_export_account_move_xlsx" />
		<field name="target">new</field>
    </record>
    <menuitem name="Libros Tributarios Chile" sequence="1" parent="l10n_cl.account_reports_cl_statements_menu" id="account-menu-item_xlsx" action="action_export_account_move_xlsx" />

<!--    se renonbra el menú de módulo dimabe_billing_rut para colocar cono historico-->
    <menuitem name="Libros Tributarios Chile Historico" sequence="2" parent="l10n_cl.account_reports_cl_statements_menu" id="dimabe_billing_rut.account-menu-item" action="dimabe_billing_rut.action_export_account_move" />

</odoo>