<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="account_move_line_form_inherit" model="ir.ui.view">
            <field name="name">inherit.account_move_line.form</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='credit']" position="after">
                    <button type="object" name="test" string="Test"/>
                </xpath>
            </field>
        </record>
        <record id="action_make_testing" model="ir.actions.server">

            <field name="name">Make Testing</field>

            <field name="condition">True</field>

            <field name="type">ir.actions.server</field>

            <field name="model_id" ref="dimabe_editable_currency.model_account_move_line"/>

            <field name="state">code</field>

            <field name="code">model.test()</field>

        </record>
        <menuitem id="balance_clp_sheet" name="Balance de Situacion en CLP" action="action_make_testing"
                  parent="account.menu_finance_reports"/>
    </data>
</odoo>