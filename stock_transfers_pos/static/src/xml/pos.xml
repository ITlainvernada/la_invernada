<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    
    <t t-name="InternalTransferCreateButton">
		<div class='control-button js_internal_transfer'>
			<i class="fa fa-truck"/>Crear Transferencia
		</div>
    </t>
    
	<t t-name="SetModeInternalTransferReceivedButton">
		<div t-att-class="'control-button js_set_mode_internal_transfer_received' + (widget.pos.get_order() and widget.pos.get_order().GetSaleMode() == 'internal_transfer_receive' and ' highlight' or '')">
			<i class="fa fa-truck"/>Modo Recepcion
		</div>
    </t>
    
    <t t-name="InternalTransferReceivedButton">
		<div class='control-button js_internal_transfer_received'>
			<i class="fa fa-truck"/>Recibir Transferencia
		</div>
    </t>
    
    <t t-name="InternalTransferPopupWidget">
        <div class="modal-dialog">
            <div class="popup popup-textinput" style="height: 203px;">
                <p class="title">Transferencia Interna</p>
                Su transferencia interna esta aqui: <a target="blank" t-att-href="widget.options.url">
                <t t-esc="widget.options.name" /></a>
                <div class="footer">
                    <div class="button cancel">
                        OK
                    </div>
                </div>
            </div>
        </div>
    </t>
    
    <t t-name="SelectionButtonPopupWidget">
        <div role="dialog" class="modal-dialog">
            <div class="popup popup-selection" style="width: 40%;">
                <header class="title"><t t-esc=" widget.options.title || 'Select' " /></header>
                <div class='selection scrollable-y touch-scrollable'>
                    <t t-foreach="widget.list || []" t-as="item">
                        <div t-attf-class="selection-item {{ widget.is_selected.call(widget, item.item) ? 'selected' : '' }}" t-att-data-item-index='item_index'>
                            <t t-esc='item.label'/>
                        </div>
                    </t>
                </div>
                <footer class="footer">
                	<div class="button confirm">
                        Ok
                    </div>
                    <div class="button cancel">
                        Cancel
                    </div>
                </footer>
            </div>
        </div>
    </t>
</templates>