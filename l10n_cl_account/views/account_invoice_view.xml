<?xml version="1.0" encoding="UTF-8"?>
<odoo>

	<record id="account_invoice_form_view" model="ir.ui.view">
		<field name="name">account.invoice.form</field>
		<field name="model">account.invoice</field>
		<field name="priority" eval="50" />
		<field name="inherit_id" ref="account.invoice_form" />
		<field name="arch" type="xml">
			<xpath expr="//field[@name='user_id']" position="before">
				<label for="warehouse_id" />
				<div>
					<field name="warehouse_id" options="{'no_open': True, 'no_create': True}" class="oe_inline" />
					<button name="action_update_account_analytic" states="draft"
						confirm="Esta seguro de actualizar la cuenta analitica en todas las lineas?."
						groups="analytic.group_analytic_accounting" string="Actualizar"
						help="Actualiza la cuenta analitica en las lineas" type="object"
						class="oe_link oe_inline oe_edit_only" icon="fa-cogs" />
				</div>
			</xpath>
			<xpath expr="//field[@name='invoice_line_ids']" position="attributes">
				<attribute name="context">{'type': type, 'journal_id': journal_id,'default_invoice_id': id, 'warehouse_id': warehouse_id}</attribute>
			</xpath>
			<xpath
				expr="//field[@name='invoice_line_ids']/tree//field[@name='product_id']"
				position="attributes">
				<attribute name="options">{'no_create': True}</attribute>
			</xpath>
			
			<xpath
				expr="//field[@name='invoice_line_ids']/tree//field[@name='account_analytic_id']"
				position="attributes">
				<attribute name="context">{'warehouse_id': parent.warehouse_id}</attribute>
			</xpath>
		</field>
	</record>

	<record id="account_invoice_supplier_form_view" model="ir.ui.view">
		<field name="name">account.invoice.form</field>
		<field name="model">account.invoice</field>
		<field name="priority" eval="50" />
		<field name="inherit_id" ref="account.invoice_supplier_form" />
		<field name="arch" type="xml">
			<xpath expr="//field[@name='partner_bank_id']" position="before">
				<label for="warehouse_id" />
				<div>
					<field name="warehouse_id" options="{'no_open': True, 'no_create': True}" class="oe_inline" />
					<button name="action_update_account_analytic" states="draft"
						confirm="Esta seguro de actualizar la cuenta analitica en todas las lineas?."
						groups="analytic.group_analytic_accounting" string="Actualizar"
						help="Actualiza la cuenta analitica en las lineas" type="object"
						class="oe_link oe_inline oe_edit_only" icon="fa-cogs" />
				</div>
			</xpath>
			<xpath expr="//field[@name='invoice_line_ids']" position="attributes">
				<attribute name="context">{'type': type, 'journal_id': journal_id,'warehouse_id': warehouse_id}</attribute>
			</xpath>
			<xpath
				expr="//field[@name='invoice_line_ids']/tree//field[@name='product_id']"
				position="attributes">
				<attribute name="options">{'no_create': True}</attribute>
			</xpath>
			<xpath
				expr="//field[@name='invoice_line_ids']/tree//field[@name='account_analytic_id']"
				position="attributes">
				<attribute name="context">{'warehouse_id': parent.warehouse_id}</attribute>
			</xpath>
		</field>
	</record>

</odoo>