<?xml version="1.0" encoding="UTF-8"?>
<odoo>

	<record id="account_voucher_purchase_form_view" model="ir.ui.view">
		<field name="name">account.voucher.form</field>
		<field name="model">account.voucher</field>
		<field name="inherit_id" ref="account_voucher.view_purchase_receipt_form" />
		<field name="arch" type="xml">
			<xpath expr="//field[@name='partner_id']" position="attributes">
				<attribute name="options">{'no_quick_create': True}</attribute>
			</xpath>
			<xpath expr="//field[@name='payment_journal_id']" position="attributes">
				<attribute name="options">{'no_create': True}</attribute>
			</xpath>
			<xpath expr="//field[@name='account_id']" position="attributes">
				<attribute name="options">{'no_quick_create': True}</attribute>
			</xpath>
			<xpath expr="//field[@name='line_ids']/tree//field[@name='product_id']"
				position="attributes">
				<attribute name="options">{'no_quick_create': True}</attribute>
			</xpath>
			<xpath expr="//field[@name='line_ids']/tree//field[@name='account_id']"
				position="attributes">
				<attribute name="options">{'no_quick_create': True}</attribute>
			</xpath>
			<xpath
				expr="//field[@name='line_ids']/tree//field[@name='account_analytic_id']"
				position="attributes">
				<attribute name="options">{'no_quick_create': True}</attribute>
			</xpath>
			<xpath expr="//field[@name='line_ids']/tree//field[@name='tax_ids']"
				position="attributes">
				<attribute name="options">{'no_create': True}</attribute>
			</xpath>
		</field>
	</record>

	<record id="account_voucher_sale_form_view" model="ir.ui.view">
		<field name="name">account.voucher.form</field>
		<field name="model">account.voucher</field>
		<field name="inherit_id" ref="account_voucher.view_sale_receipt_form" />
		<field name="arch" type="xml">
			<xpath expr="//field[@name='partner_id']" position="attributes">
				<attribute name="options">{'always_reload': True, 'no_quick_create': True}</attribute>
			</xpath>
			<xpath expr="//field[@name='account_id']" position="attributes">
				<attribute name="options">{'no_quick_create': True}</attribute>
			</xpath>
			<xpath expr="//field[@name='payment_journal_id']" position="attributes">
				<attribute name="options">{'no_create': True}</attribute>
			</xpath>
			<xpath expr="//field[@name='account_id']" position="after">
				<field name="reference" />
			</xpath>
			<xpath expr="//field[@name='line_ids']/tree//field[@name='product_id']"
				position="attributes">
				<attribute name="options">{'no_quick_create': True}</attribute>
			</xpath>
			<xpath expr="//field[@name='line_ids']/tree//field[@name='account_id']"
				position="attributes">
				<attribute name="options">{'no_quick_create': True}</attribute>
			</xpath>
			<xpath
				expr="//field[@name='line_ids']/tree//field[@name='account_analytic_id']"
				position="attributes">
				<attribute name="options">{'no_quick_create': True}</attribute>
			</xpath>
			<xpath expr="//field[@name='line_ids']/tree//field[@name='tax_ids']"
				position="attributes">
				<attribute name="options">{'no_create': True}</attribute>
			</xpath>
		</field>
	</record>

	<record id="account_voucher_tree_view" model="ir.ui.view">
		<field name="name">account.voucher.tree</field>
		<field name="model">account.voucher</field>
		<field name="inherit_id" ref="account_voucher.view_voucher_tree" />
		<field name="arch" type="xml">
			<xpath expr="//field[@name='partner_id']" position="after">
				<field name="reference"></field>
			</xpath>
			<xpath expr="//field[@name='state']" position="after">
				<field name="paid" />
			</xpath>
		</field>
	</record>

	<record id="account_voucher_purchase_search_view" model="ir.ui.view">
		<field name="name">account.voucher.search</field>
		<field name="model">account.voucher</field>
		<field name="inherit_id" ref="account_voucher.view_voucher_filter_vendor" />
		<field name="arch" type="xml">
			<xpath expr="//field[@name='number']" position="after">
				<field name="reference"></field>
			</xpath>
			<filter name="draft" position="before">
				<filter name="this_month" string="Fecha Factura" date="date" />
				<filter name="this_month_account_date" string="Fecha Contable"
					date="account_date" />
				<filter name="this_month_date_due" string="Fecha Vencimiento"
					date="date_due" />
				<separator />
			</filter>
			<filter name="billdate" position="after">
				<filter string="Fecha Contable" name="group_by_account_date"
					context="{'group_by':'account_date'}" />
			</filter>
		</field>
	</record>

	<record id="account_voucher_sale_search_view" model="ir.ui.view">
		<field name="name">account.voucher.search</field>
		<field name="model">account.voucher</field>
		<field name="inherit_id" ref="account_voucher.view_voucher_filter_sale" />
		<field name="arch" type="xml">
			<xpath expr="//field[@name='number']" position="after">
				<field name="reference"></field>
			</xpath>
			<filter name="darft" position="before">
				<filter name="this_month" string="Fecha Factura" date="date" />
				<filter name="this_month_account_date" string="Fecha Contable"
					date="account_date" />
				<filter name="this_month_date_due" string="Fecha Vencimiento"
					date="date_due" />
				<separator />
			</filter>
			<filter name="accountdate" position="before">
				<filter string="Fecha Factura" name="group_by_date" context="{'group_by':'date'}" />
			</filter>
		</field>
	</record>

	<record id="account_voucher.action_sale_receipt" model="ir.actions.act_window">
		<field name="context">{'default_voucher_type': 'sale', 'voucher_type': 'sale', 'search_default_this_month': 1}</field>
	</record>

	<record id="account_voucher.action_purchase_receipt" model="ir.actions.act_window">
		<field name="context">{'default_voucher_type': 'purchase', 'voucher_type': 'purchase', 'search_default_this_month': 1}</field>
	</record>

</odoo>