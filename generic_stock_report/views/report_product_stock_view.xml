<?xml version="1.0" encoding="UTF-8"?>
<odoo>

	<record model="ir.ui.view" id="report_product_stock_graph_view">
		<field name="name">report.product.stock.graph</field>
		<field name="model">report.product.stock</field>
		<field name="arch" type="xml">
			<graph>
				<field name="location_id" />
				<field name="qty_available" type="measure" />
			</graph>
		</field>
	</record>

	<record model="ir.ui.view" id="report_product_stock_pivot_view">
		<field name="name">report.product.stock.pivot</field>
		<field name="model">report.product.stock</field>
		<field name="arch" type="xml">
			<pivot disable_linking="True">
				<field name="qty_available" type="measure" />
				<field name="incoming_qty" type="measure" />
				<field name="outgoing_qty" type="measure" />
				<field name="virtual_available" type="measure" />
			</pivot>
		</field>
	</record>

	<record model="ir.ui.view" id="report_product_stock_search_view">
		<field name="name">report.product.stock.search</field>
		<field name="model">report.product.stock</field>
		<field name="arch" type="xml">
			<search>
				<field name="location_id" />
				<field name="product_id" />
				<field name="product_template_id" />
				<field name="product_categ_id" />
				<group name="group_by" string="Agrupar por">
					<filter name="group_by_location_id" string="Bodega"
						context="{'group_by': 'location_id'}" />
					<filter name="group_by_product" string="Producto"
						context="{'group_by': 'product_id'}" />
					<filter name="group_by_product_category" string="Categoria de Producto"
						context="{'group_by': 'product_categ_id'}" />
				</group>
			</search>
		</field>
	</record>

	<record model="ir.actions.act_window" id="action_report_product_stock_graph_view">
		<field name="name">Stock de Productos</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">report.product.stock</field>
		<field name="view_type">form</field>
		<field name="view_mode">pivot,graph</field>
		<field name="context">{}</field>
		<field name="view_id" ref="report_product_stock_pivot_view" />
		<field name="search_view_id" ref="report_product_stock_search_view" />
	</record>

	<menuitem id="report_product_stock_menu" parent="stock.menu_warehouse_report"
		action="action_report_product_stock_graph_view" groups="generic_stock.group_stock_report" sequence="30" />

</odoo>