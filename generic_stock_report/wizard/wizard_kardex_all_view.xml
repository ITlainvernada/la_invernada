<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record model="ir.ui.view" id="wizard_kardex_all_form_view">
		<field name="name">wizard.kardex.all.report.form</field>
		<field name="model">wizard.kardex.all.report</field>
		<field name="arch" type="xml">
			<form string="Kardex General">
				<group>
					<group>
						<field name="start_date" required="1" />
						<field name="filter" required="1" />
					</group>
					<group>
						<field name="end_date" required="1" />
					</group>
				</group>
				<notebook colspan="2">
					<page string="Locations">
						<field name="location_ids" domain="[('usage','=','internal')]"
							options="{'no_create': True}" />
					</page>
					<page string="Products" attrs="{'invisible':[('filter','!=','by_product')]}">
						<field name="product_ids" domain="[('type','!=', 'service')]"
							options="{'no_create': True}">
							<tree>
								<field name="default_code" />
								<field name="name" />
								<field name="categ_id" />
								<field name="uom_id" />
								<field name="barcode" />
							</tree>
						</field>
					</page>
					<page string="Categories" attrs="{'invisible':[('filter','!=','by_category')]}">
						<field name="category_ids" domain="[('type','!=', 'view')]"
							options="{'no_create': True}" />
					</page>
					<page string="Lots" attrs="{'invisible':[('filter','!=','by_lot')]}">
						<field name="lot_ids" options="{'no_create': True}" />
					</page>
				</notebook>
				<footer>
					<div class="oe_left">
						<button string="Generar reporte" name="action_print_report"
							type="object" class="oe_highlight fa fa-file-pdf-o" />
						<button string="Cerrar" special="cancel" type="object"
							class="oe_link" />
					</div>
				</footer>
			</form>
		</field>
	</record>

	<record model="ir.actions.act_window" id="action_wizard_kardex_all_tree_view">
		<field name="name">Kardex General</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">wizard.kardex.all.report</field>
		<field name="view_type">form</field>
		<field name="view_mode">tree,form</field>
		<field name="view_id" ref="wizard_kardex_all_form_view" />
		<field name="target">new</field>
	</record>

	<menuitem id="wizard_kardex_all_menu" name="Kardex General"
		sequence="12" parent="stock.menu_warehouse_report" 
		groups="generic_stock.group_stock_report" action="action_wizard_kardex_all_tree_view" />

</odoo>