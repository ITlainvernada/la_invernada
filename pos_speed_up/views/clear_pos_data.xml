<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_config_kanban_inherit" model="ir.ui.view">
        <field name="name">pos.config.kanban.inherit</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_config_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('o_kanban_card_manage_settings')]/div[@role='menuitem']" position="before">
                <script>
                    function clearData() {
                        localStorage.clear();
                        window.indexedDB.deleteDatabase('pos');
                        $('a.o_kanban_manage_toggle_button').click();
                    }
                </script>
                <div role="menuitem" class="col-12">
                    <a style="cursor: pointer;" onclick="clearData()">
                        <i class="fa fa-refresh"></i>
                        Refresh Data
                    </a>
                </div>
            </xpath>
        </field>
    </record>
</odoo>