<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<!-- cambiar el vat por el document_number -->
	<template id="external_layout_background"
		inherit_id="web.external_layout_background">
		<xpath expr="//span[@t-field='company.partner_id']" position="before">
			<t t-if="company.document_number">
				<strong t-esc="(company.country_id.vat_label or 'RUT').replace(' ','\N{NO-BREAK SPACE}')" />: <span t-esc="company.document_number.replace(' ','\N{NO-BREAK SPACE}')" />
				<t t-if="company.partner_id.activity_description">
					<br />
					<strong>Giro</strong>: <small t-esc="company.partner_id.activity_description.name.replace(' ','\N{NO-BREAK SPACE}')" />
				</t>
			</t>
		</xpath>
		<xpath expr="//li[@t-if='company.vat']" position="replace">
			<li t-if="company.document_number" class="list-inline-item">
				<i class="fa fa-building-o" role="img" aria-label="RUT" />
				<t t-esc="(company.country_id.vat_label or 'RUT').replace(' ','\N{NO-BREAK SPACE}')" />: <span t-esc="company.document_number.replace(' ','\N{NO-BREAK SPACE}')" />
			</li>
		</xpath>
	</template>
	
	<template id="external_layout_boxed"
		inherit_id="web.external_layout_boxed">
		<xpath expr="//div[@name='company_address']" position="replace">
			<div name="company_address" class="mb4">
				<div>
                    <strong t-field="company.partner_id.name"/>
                </div>
                <t t-if="company.document_number">
					<strong t-esc="(company.country_id.vat_label or 'RUT').replace(' ','\N{NO-BREAK SPACE}')" />: <span t-esc="company.document_number.replace(' ','\N{NO-BREAK SPACE}')" />
					<t t-if="company.partner_id.activity_description">
						<br />
						<strong>Giro</strong>: <small t-esc="company.partner_id.activity_description.name.replace(' ','\N{NO-BREAK SPACE}')" />
					</t>
				</t>
                <span class="company_address" t-field="company.partner_id"
                    t-options='{"widget": "contact", "fields": ["address"], "no_marker": true}'/>
            </div>
		</xpath>
		<xpath expr="//li[@t-if='company.vat']" position="replace">
			<li t-if="company.document_number" class="list-inline-item"><t t-esc="(company.country_id.vat_label or 'RUT').replace(' ','\N{NO-BREAK SPACE}')"/>: <span t-esc="company.document_number.replace(' ','\N{NO-BREAK SPACE}')"/></li>
		</xpath>
	</template>
	
	<template id="external_layout_clean"
		inherit_id="web.external_layout_clean" priority="5">
		<xpath expr="//img[@t-if='company.logo']/.." position="attributes">
			<attribute name="class">col-2</attribute>
		</xpath>
		<xpath expr="//div[@name='company_address']" position="attributes">
			<attribute name="class">col-10</attribute>
		</xpath>
		<xpath expr="//li[@t-if='company.vat']" position="replace">
			<li t-if="company.document_number"><strong t-esc="company.country_id.vat_label or 'RUT'"/>: <span t-field="company.document_number"/></li>
			<t t-if="company.partner_id.activity_description">
				<li><strong>Giro</strong>: <small t-esc="company.partner_id.activity_description.name.replace(' ','\N{NO-BREAK SPACE}')" /></li>
			</t>
		</xpath>
	</template>
	
	<template id="external_layout_standard"
		inherit_id="web.external_layout_standard">
		<xpath expr="//div[@name='company_address']" position="replace">
			<div class="col-12" name="company_address">
                <div>
                    <strong t-field="company.partner_id.name"/>
                </div>
                <t t-if="company.document_number">
					<strong t-esc="(company.country_id.vat_label or 'RUT').replace(' ','\N{NO-BREAK SPACE}')" />: <span t-esc="company.document_number.replace(' ','\N{NO-BREAK SPACE}')" />
					<t t-if="company.partner_id.activity_description">
						<br />
						<strong>Giro</strong>: <small t-esc="company.partner_id.activity_description.name.replace(' ','\N{NO-BREAK SPACE}')" />
					</t>
				</t>
                <span class="company_address" t-field="company.partner_id"
                    t-options='{"widget": "contact", "fields": ["address"], "no_marker": true}'/>
            </div>
		</xpath>
		<xpath expr="//li[@t-if='company.vat']" position="replace">
			<li t-if="company.document_number" class="list-inline-item"><strong t-esc="(company.country_id.vat_label or 'RUT').replace(' ','\N{NO-BREAK SPACE}')"/>: <span t-esc="company.document_number.replace(' ','\N{NO-BREAK SPACE}')"/></li>
		</xpath>
	</template>
</odoo>