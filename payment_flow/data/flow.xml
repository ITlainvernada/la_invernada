<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="payment_acquirer_flow" model="payment.acquirer">
            <field name="name">Flow</field>
            <field name="image" type="base64" file="payment_flow/static/description/icon.png"/>
            <field name="provider">flow</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="view_template_id" ref="flow_acquirer_button"/>
            <field name="environment">test</field>
            <field name="pre_msg"><![CDATA[
<p>You will be redirected to the Flow website after clicking on the payment button.</p>]]></field>
        </record>
        
        <record id="payment_acquirer_flow_img" model="payment.icon">
        	<field name="name">Flow</field>
            <field name="image" type="base64" file="payment_flow/static/src/img/flow_icon.png"/>
            <field name="acquirer_ids" eval="[(6, 0, [ref('payment_acquirer_flow')])]"/>
        </record>

    </data>
</odoo>
