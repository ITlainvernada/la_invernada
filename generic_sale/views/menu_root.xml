<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<!-- reemplazar menu para cambiar los grupos para menus de informes -->
	<record id="sale.menu_sale_report" model="ir.ui.menu">
		<field name="groups_id"
			eval="[(3, ref('sales_team.group_sale_manager')), 
						(4, ref('generic_sale.group_sale_report'))]" />
	</record>

	<!-- reemplazar menu para cambiar los grupos para menus de configuracion -->
	<record id="sale.menu_sale_config" model="ir.ui.menu">
		<field name="groups_id"
			eval="[(3, ref('sales_team.group_sale_manager')), 
						(4, ref('generic_sale.group_sale_config'))]" />
	</record>

	<!-- menu Pedidos/Equipo de ventas -->
	<record id="sale.report_sales_team" model="ir.ui.menu">
		<field name="groups_id" eval="[(4, ref('sales_team.group_sale_salesman'))]" />
	</record>
	
	<!-- menu Facturando en ventas/Facturando -->
	<record id="sale.menu_sale_invoicing" model="ir.ui.menu">
		<field name="groups_id" eval="[(4, ref('sales_team.group_sale_salesman'))]" />
	</record>

	<!-- menu categorias de unidades de medida en ventas/configuracion -->
	<record id="sale.menu_product_uom_categ_form_action" model="ir.ui.menu">
		<field name="groups_id" eval="[(4, ref('uom.group_uom'))]" />
	</record>
</odoo>