<?xml version="1.0" encoding="UTF-8"?>
<odoo noupdate="1">
	<record id="group_sale_discount_value" model="res.groups"
		forcecreate="True">
		<field name="name">Descuento en Monto</field>
		<field name="users"
			eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]" />
		<field name="implied_ids" eval="[(4, ref('sales_team.group_sale_salesman'))]" />
		<field name="category_id" ref="module_category_sales_management" />
	</record>
	
	<!-- grupo para configuraciones y ver informes relativas al propio modulo -->
	<record id="group_sale_report" model="res.groups" forcecreate="True">
		<field name="name">Informes</field>
		<field name="users"
			eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]" />
		<field name="implied_ids" eval="[(4, ref('sales_team.group_sale_salesman'))]" />
		<field name="category_id" ref="module_category_sales_management" />
	</record>

	<record id="group_sale_config" model="res.groups" forcecreate="True">
		<field name="name">Configuraciones</field>
		<field name="users"
			eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]" />
		<field name="implied_ids" eval="[(4, ref('sales_team.group_sale_manager'))]" />
		<field name="category_id" ref="module_category_sales_management" />
	</record>

	<record id="report_all_channels_sales_personal_rule" model="ir.rule">
		<field name="name">Ventas por Canal de venta(Personal)</field>
		<field name="model_id" ref="sale.model_report_all_channels_sales" />
		<field name="domain_force">['|',('user_id','=',user.id),('user_id','=',False)]</field>
		<field name="groups" eval="[(4, ref('sales_team.group_sale_salesman'))]" />
	</record>

	<record id="report_all_channels_sales_see_all" model="ir.rule">
		<field name="name">Ventas por Canal de venta(Todos)</field>
		<field name="model_id" ref="sale.model_report_all_channels_sales" />
		<field name="domain_force">[(1,'=',1)]</field>
		<field name="groups"
			eval="[(4, ref('sales_team.group_sale_salesman_all_leads'))]" />
	</record>
</odoo>