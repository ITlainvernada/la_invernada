<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="credit_card_provider_tree_view" model="ir.ui.view">
		<field name="name">credit.card.provider.tree</field>
		<field name="model">credit.card.provider</field>
		<field name="arch" type="xml">
			<tree>
				<field name="sequence" widget="handle" />
				<field name="name" />
				<field name="report_format" />
			</tree>
		</field>
	</record>

	<record id="credit_card_provider_form_view" model="ir.ui.view">
		<field name="name">credit.card.provider.form</field>
		<field name="model">credit.card.provider</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<div class="oe_button_box" name="button_box">
						<button class="oe_stat_button" type="object"
							name="toggle_active" icon="fa-archive">
							<field name="active" widget="boolean_button"
								options="{'terminology': 'archive'}" />
						</button>
					</div>
					<group>
						<group>
							<field name="name" />
							<field name="report_format" />
						</group>
						<group>
							<field name="sequence" />
						</group>
					</group>
				</sheet>
			</form>
		</field>
	</record>

	<record id="credit_card_provider_search_view" model="ir.ui.view">
		<field name="name">credit.card.provider.search</field>
		<field name="model">credit.card.provider</field>
		<field name="arch" type="xml">
			<search>
				<field name="name" />
				<field name="report_format" />
				<filter string="Archivado" name="filter_by_inactive" domain="[('active','=',False)]"/>
			</search>
		</field>
	</record>

	<record id="credit_card_provider_action"
		model="ir.actions.act_window">
		<field name="name">Grupos de Tarjetas de credito</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">credit.card.provider</field>
		<field name="view_type">form</field>
		<field name="view_mode">tree,form</field>
		<field name="view_id" ref="credit_card_provider_tree_view" />
		<field name="search_view_id"
			ref="credit_card_provider_search_view" />
	</record>

	<menuitem id="credit_card_provider_menu"
		name="Grupos de Tarjetas de credito" sequence="20"
		parent="account.account_account_menu"
		action="credit_card_provider_action" />
</odoo>
